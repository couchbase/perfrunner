[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputLatencyTest
title = N1QL CI2 1Bux20Mx1K, Singleton Unique Lookup, 14.4KGops, 3.6KSops, 8KQops, GSI, stale=ok
summary = Singleton Unique Lookup, 14.4KGops, 3.6KSops, 8KQops
larger_is_better = false

[cluster]
mem_quota = 8048
index_mem_quota = 1000
initial_nodes = 3
num_buckets = 1

[stats]
add_snapshots = 0
seriesly_host = 10.5.3.40

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 1000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_email_name_street::CREATE INDEX {name} ON `{bucket}` (email,name,street) using gsi;

[load]
items = 1000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 1000
items = 100000
workers = 24
time = 300
n1ql_queries = singleton-unique-lookup
n1ql_throughput = 200
n1ql_workers = 2
n1ql_throughput_max = 6000

[n1ql-singleton-unique-lookup]
prepared = singleton_unique_lookup
statement = SELECT name AS _name, street AS _street  FROM `bucket-1` WHERE email = $1;
scan_consistency = not_bounded
args = ["{email}"]"
