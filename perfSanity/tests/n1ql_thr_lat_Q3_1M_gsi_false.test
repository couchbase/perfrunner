[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputLatencyTest
title = N1QL Q3 1Bux2Mx1K, Range Scan, 14.4KGops, 3.6KSops, GSI, stale=false
summary = RangeScan , 14.4KGops, 3.6KSops
larger_is_better = false

[cluster]
mem_quota = 8048
index_mem_quota = 1000
initial_nodes = 3
num_buckets = 1

[stats]
add_snapshots = 0
seriesly_host = 10.5.3.40

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[compaction]
db_percentage = 100
view_percentage = 100

[load]
items = 500000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_capped_small::CREATE INDEX {name} ON `{bucket}` (capped_small) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 180
items = 1000
workers = 4
time = 300
n1ql_queries = range-scan
n1ql_throughput = 1500
n1ql_workers = 15

[n1ql-range-scan]
prepared = range_scan
statement = SELECT name.f.f AS _name, street.f.f AS _street FROM `bucket-1` WHERE capped_small=$1;
scan_consistency = request_plus
args = ["{capped_small}"]
