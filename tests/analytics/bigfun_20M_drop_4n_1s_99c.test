[test_case]
test = perfrunner.tests.analytics.BigFunDropDatasetTest
use_workers = 0

[showfast]
title = Avg. drop rate (items/sec), 4 nodes, BigFUN 20M users (320M docs), 3 indexes, SSD, s=1 c=99
component = analytics
category = drop
orderby = _ssd_1n_99

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 6
num_buckets = 1

[collection]
config = collections/1bucket_1scope_99collections_analytics.json

[analytics]
num_io_devices = 4
dataset_conf_file = tests/analytics/config/bigfun_99_to_99_datasets.yaml
drop_dataset = ChirpMessages-1
index_conf_file = tests/analytics/config/bigfun_analytics_secondary_indexes.yaml

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data2/backup/99collections/
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1
