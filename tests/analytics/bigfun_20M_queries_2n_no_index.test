[test_case]
test = perfrunner.tests.analytics.BigFunQueryNoIndexTest
use_workers = 0

[showfast]
title = 2 nodes, BigFUN 20M users (320M docs), SSD, no indexes (ad hoc)
component = analytics
category = latency
sub_category = Without Index
orderby = _ssd_2n

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 4
num_buckets = 1

[analytics]
num_io_devices = 4
queries = perfrunner/workloads/bigfun/queries_without_index.json

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /backups
backup_repo = bigfun20M
threads = 8

[access]
analytics_warmup_ops = 3
analytics_warmup_workers = 1
ops = 10
workers = 1
