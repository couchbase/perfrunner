[test_case]
test = perfrunner.tests.analytics.BigFunQueryFailoverTest
use_workers = 0

[showfast]
title = 4 nodes, BigFUN 20M users (320M docs), SSD, s=1 c=3, 1 analytics replica, Failover
component = analytics
category = latency
sub_category = With Index
orderby = _ssd_4n_3

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 6
num_buckets = 1

[collection]
config = collections/1bucket_1scope_3collections_analytics.json

[analytics]
num_io_devices = 4
queries = perfrunner/workloads/bigfun/queries_with_index.json
analytics_config_file = tests/analytics/config/3_datasets_collection_config.json
replica_analytics = 1

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data2/backup/3collections/
backup_repo = default
threads = 8
map_data = bucket-1.scope-1.GleambookUsers=bucket-1.scope-1.GleambookUsers-1,bucket-1.scope-1.GleambookMessages=bucket-1.scope-1.GleambookMessages-1,bucket-1.scope-1.ChirpMessages=bucket-1.scope-1.ChirpMessages-1

[access]
analytics_warmup_ops = 10
analytics_warmup_workers = 1
ops = 30
workers = 1

[rebalance]
failed_nodes = 1
