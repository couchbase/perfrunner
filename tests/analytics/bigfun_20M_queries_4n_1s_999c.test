[test_case]
test = perfrunner.tests.analytics.BigFunInitialSyncAndQueryTest
use_workers = 0

[showfast]
title = 4 nodes, BigFUN 20M users (320M docs), 999 indexes, SSD, s=1 c=999
component = analytics
category = latency
sub_category = With Index
orderby = _ssd_4n_999

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 51200
initial_nodes = 6
num_buckets = 1

[collection]
config = collections/1bucket_1scope_999collections_analytics.json

[analytics]
num_io_devices = 4
queries = perfrunner/workloads/bigfun/queries_with_index_1s_999c.json
dataset_conf_file = tests/analytics/config/bigfun_999_to_999_datasets.json
index_conf_file = tests/analytics/config/bigfun_analytics_secondary_indexes.json

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data3/backup/999collections/
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1

[access]
analytics_warmup_ops = 10
analytics_warmup_workers = 1
ops = 100
workers = 1
