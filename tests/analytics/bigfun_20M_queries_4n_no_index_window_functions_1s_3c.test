[test_case]
test = perfrunner.tests.analytics.BigFunInitialSyncAndQueryTest
use_workers = 0

[showfast]
title = 4 nodes, BigFUN 20M users (320M docs), SSD, no indexes (ad hoc), window functions, s=1 c=3
component = analytics
category = latency
sub_category = Window Functions
orderby = _ssd_4n_3

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 6
num_buckets = 1

[collection]
config = collections/1bucket_1scope_3collections_analytics.json

[analytics]
num_io_devices = 4
queries = perfrunner/workloads/bigfun/queries_without_index_window_functions.yaml
dataset_conf_file = tests/analytics/config/bigfun_3_to_3_datasets.yaml

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data2/backup/3collections_new/
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1

[access]
analytics_warmup_ops = 10
analytics_warmup_workers = 1
ops = 30
workers = 1
