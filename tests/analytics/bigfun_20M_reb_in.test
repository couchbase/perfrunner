[test_case]
test = perfrunner.tests.analytics.BigFunRebalanceTest
use_workers = 0

[showfast]
title = Rebalance-in (min), 3 -> 4 nodes, BigFUN 20M users (320M docs), SSD
component = analytics
category = rebalance
orderby = _in_ssd

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 5
num_buckets = 1

[analytics]
num_io_devices = 4

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /backups
backup_repo = bigfun20M
threads = 8

[rebalance]
nodes_after = 6
start_after = 0
stop_after = 0
