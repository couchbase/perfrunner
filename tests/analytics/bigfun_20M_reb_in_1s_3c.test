[test_case]
test = perfrunner.tests.analytics.BigFunRebalanceTest
use_workers = 0

[showfast]
title = Rebalance-in (min), 3 -> 4 nodes, BigFUN 20M users (320M docs), SSD, s=1 c=3
component = analytics
category = rebalance
orderby = _in_ssd_3

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 5
num_buckets = 1

[collection]
config = collections/1bucket_1scope_3collections_analytics.json

[analytics]
num_io_devices = 4
dataset_conf_file = tests/analytics/config/bigfun_3_to_3_datasets.yaml
index_conf_file = tests/analytics/config/bigfun_analytics_secondary_indexes.yaml

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data2/backup/3collections_new/
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1

[rebalance]
nodes_after = 6
start_after = 0
stop_after = 0
