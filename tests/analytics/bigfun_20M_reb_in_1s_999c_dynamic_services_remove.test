[test_case]
test = perfrunner.tests.analytics.AnalyticsDynamicServiceRebalanceTest
use_workers = 0

[showfast]
title = Dynamic Services Rebalance (min), Removing CBAS, BigFUN 20M users (320M docs), SSD, s=1 c=999
component = reb
category = dynamic

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 51200
initial_nodes = 5
num_buckets = 1

[collection]
config = collections/1bucket_1scope_999collections_analytics.json

[analytics]
num_io_devices = 4
dataset_conf_file = tests/analytics/config/bigfun_999_to_999_datasets.yaml
index_conf_file = tests/analytics/config/bigfun_analytics_secondary_indexes.yaml

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data3/backup/999collections/
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1

[rebalance]
start_after = 180
services = cbas
replace_nodes = -1
