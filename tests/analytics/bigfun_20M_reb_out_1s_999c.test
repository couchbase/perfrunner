[test_case]
test = perfrunner.tests.analytics.BigFunRebalanceTest
use_workers = 0

[showfast]
title = Rebalance-out (min), 4 -> 3 nodes, BigFUN 20M users (320M docs), SSD, s=1 c=999
component = analytics
category = rebalance
orderby = _out_ssd_999

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 51200
initial_nodes = 6
num_buckets = 1

[collection]
config = collections/1bucket_1scope_999collections_analytics.json

[analytics]
num_io_devices = 4
dataset_conf_file = tests/analytics/config/bigfun_999_to_999_datasets.yaml
index_conf_file = tests/analytics/config/bigfun_analytics_secondary_indexes.yaml

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data3/backup/999collections/
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1

[rebalance]
nodes_after = 5
start_after = 0
stop_after = 0
