[test_case]
test = perfrunner.tests.analytics.BigFunRebalanceTest
use_workers = 0

[showfast]
title = Rebalance-out (min), 4 -> 3 nodes, BigFUN 20M users (320M docs), SSD, s=1 c=99
component = analytics
category = rebalance
orderby = _out_ssd_99

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 6
num_buckets = 1

[collection]
config = collections/1bucket_1scope_99collections_analytics.json

[analytics]
num_io_devices = 4
analytics_config_file = tests/analytics/config/99_datasets_collection_config.json

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data2/backup/99collections/
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1

[rebalance]
nodes_after = 5
start_after = 0
stop_after = 0
