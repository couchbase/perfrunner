[test_case]
test = perfrunner.tests.analytics.BigFunSyncTest
use_workers = 0

[showfast]
title = Avg. ingestion rate (items/sec), 4 nodes, BigFUN 20M users (320M docs), 3 indexes, SSD, s=1 c=3, Remote Link
component = analytics
category = sync
sub_category = Initial
orderby = _ssd_4n_3

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 2 4
num_buckets = 1

[collection]
config = collections/1bucket_1scope_3collections_analytics.json

[analytics]
num_io_devices = 4
analytics_config_file = tests/analytics/config/3_datasets_collection_config.json
analytics_link = RemoteLink

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data2/backup/3collections_new/
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1
