[test_case]
test = perfrunner.tests.analytics.BigFunIncrSyncTest
use_workers = 0

[showfast]
title = 2 nodes, BigFUN 20M users (320M docs), 3 indexes, SSD
component = analytics
category = sync
sub_category = Incremental
orderby = _ssd_2n

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 4
num_buckets = 1

[bucket]
eviction_policy = fullEviction

[analytics]
dataset_conf_file = tests/analytics/config/bigfun_1_to_3_datasets.yaml
index_conf_file = tests/analytics/config/bigfun_analytics_secondary_indexes.yaml
num_io_devices = 4

[restore]
backup_storage = /backups
backup_repo = bigfun20M
threads = 8
