[test_case]
test = perfrunner.tests.analytics.BigFunInitialSyncAndQueryTest
use_workers = 0

[showfast]
title = 4 nodes, BigFUN 20M users (320M docs), 999 indexes, SSD
component = analytics
category = sync
sub_category = Initial
orderby = _ssd_4n_999

[stats]
server_processes = java

[cluster]
mem_quota = 20480
analytics_mem_quota = 51200
initial_nodes = 6
num_buckets = 1

[analytics]
num_io_devices = 4
dataset_conf_file = tests/analytics/config/bigfun_1_to_999_datasets.yaml
index_conf_file = tests/analytics/config/bigfun_analytics_secondary_indexes.yaml

[bucket]
eviction_policy = fullEviction

[restore]
backup_storage = /data3/backup/default999dataset
backup_repo = default
threads = 8
