[test_case]
test = perfrunner.tests.analytics.CH2Test

[showfast]
title = CH2 Queries, 2Q x 4A, c=11, analytics only
component = analytics
category = ch2

[stats]
server_processes = java

[cluster]
mem_quota = 25600
index_mem_quota = 12800
analytics_mem_quota = 51200
initial_nodes = 6
num_buckets = 1
bucket_name = bench

[collection]
config = collections/1bucket_1scope_11collections_analytics_ch2.json

[analytics]
num_io_devices = 4

[bucket]
eviction_policy = fullEviction
replica_index = 1

[compaction]
db_percentage = 100

[bucket_extras]
num_writer_threads = 64
num_reader_threads = 32
max_num_shards = 64

[secondary]
indexer.settings.storage_mode = plasma

[restore]
backup_storage = /data3/backup/ch2_w1000/
backup_repo = ch2
threads = 8
map_data = bench.ch2=bench.ch2

[ch2]
warehouses = 1000
aclients = 1
tclients = 0
iterations = 2
warmup_iterations = 1
duration = 0
warmup_duration = 0
workload = ch2_analytics
