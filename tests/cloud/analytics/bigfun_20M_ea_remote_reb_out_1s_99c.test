[test_case]
test = perfrunner.tests.analytics.BigFunRebalanceTest

[showfast]
title = Rebalance-out (min), 4 -> 3 nodes, BigFUN 20M users (320M docs), 99 indexes, s=1 c=99, Remote Link, Enterprise Analytics
component = analyticscloud
category = rebalance
sub_category = {provider}

[stats]
server_processes = java

[cluster]
mem_quota = 100
analytics_mem_quota = 25600
initial_nodes = 4 4
num_buckets = 1

[bucket]
eviction_policy = fullEviction

[collection]
config = collections/1bucket_1scope_99collections_analytics.json

[analytics]
num_io_devices = 1
dataset_conf_file = tests/analytics/config/bigfun_99_to_99_datasets.json
index_conf_file = tests/analytics/config/bigfun_analytics_secondary_indexes.json
analytics_link = RemoteLink

[backup]
obj_staging_dir = /stage
obj_access_key_id = cbperfstorage

[restore]
backup_storage = az://analytics-bigfun20m-99collections
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1

[rebalance]
nodes_after = 4 3
start_after = 0
stop_after = 0
