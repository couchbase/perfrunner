[test_case]
test = perfrunner.tests.analytics.BigFunRebalanceCloudTest

[showfast]
title = Rebalance-out (min), 4 -> 3 nodes, BigFUN 20M users (320M docs), s=1 c=99
component = analyticscloud
category = rebalance
sub_category = {provider}

[stats]
server_processes = java

[cluster]
mem_quota = 12800
analytics_mem_quota = 24576
initial_nodes = 7
num_buckets = 1
enable_cpu_cores = false
ui_http = disabled
enable_n2n_encryption = all

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[collection]
config = collections/1bucket_1scope_99collections_analytics.json

[analytics]
analytics_config_file = tests/analytics/config/99_datasets_collection_config.json

[backup]
obj_staging_dir = /stage
obj_region = us-east-1
aws_credential_path = /root/.ssh

[restore]
backup_storage = s3://analytics-bigfun20m-99collections
modify_storage_dir_name = True
backup_repo = default
threads = 8
map_data = bucket-1.scope-1=bucket-1.scope-1
use_tls = 1

[rebalance]
nodes_after = 6
start_after = 300
stop_after = 300

[clients]
python_client = 3.2.7
