[test_case]
test = perfrunner.tests.analytics.CH2CapellaColumnarRemoteLinkTest

[showfast]
title = CH2 5000W, 4A, c=11 (remote collections), analytics-only workload, CBO (high sample size), Unoptimized Queries, Analytics Heterogeneous Indexes
component = analyticscloud
category = ch2
sub_category = {provider}
orderby = ch2_05000_r_04n_a01_cbo_idx

[stats]
server_processes = java

[cluster]
num_buckets = 1
bucket_name = bench
enable_n2n_encryption = all

[collection]
config = collections/1bucket_1scope_11collections_analytics_ch2.json

[bucket]
backend_storage = magma
eviction_policy = fullEviction
replica_index = 1

[backup]
obj_staging_dir = /stage
obj_region = us-east-1
aws_credential_path = /root/.ssh

[restore]
backup_storage = s3://analytics-ch2-5000w
backup_repo = ch2
threads = 8
map_data = bench.ch2=bench.ch2

[analytics]
analytics_link = RemoteLink
use_cbo = true
cbo_sample_size = high

[ch2]
warehouses = 5000
aclients = 1
tclients = 0
load_tclients = 48
iterations = 2
warmup_iterations = 1
duration = 0
warmup_duration = 0
workload = ch2_analytics
use_backup = true
create_gsi_index = false
analytics_index_def_file = tests/analytics/config/ch2_analytics_heterogeneous_secondary_indexes.sql
unoptimized_queries = true