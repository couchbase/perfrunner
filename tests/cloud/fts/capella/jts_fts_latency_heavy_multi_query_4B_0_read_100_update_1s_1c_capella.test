[test_case]
test = perfrunner.tests.fts.FTSLatencyAccessLoadTest

[showfast]
title = Heavy , Multi query , Geo Radius = 10mi, Term, Fuzzy 1, Date, Numeric Range, Match Phrase, Prefix, wiki 1M x 1KB, 3 node, 4 buckets, 4 bucket mutations phase, 0 read 100 write, FTS
component = jtscloud
category = Latency
sub_category = {provider}
orderby = q0b00000010

[cluster]
mem_quota = 23552
initial_nodes = 5
num_buckets = 4
fts_index_mem_quota = 23552
enable_cpu_cores = false
enable_n2n_encryption = all

[bucket]
replica_number = 1

[collection]
scopes_per_bucket = 1
collections_per_scope = 1
config = collections/4buckets_1scope_1collection_basic.json

[jts]
index_creation_style = async
jts_repo_branch = multi_query_support
logging_method = bucket_wise
jts_instances = 1
test_duration = 60
test_total_docs = 1000000
test_query_workers = 1
test_kv_workers = 30
test_kv_throughput_goal = 10000
test_driver = couchbase
test_stats_limit = 1000000
test_stats_aggregation_step = 100
test_debug = false
test_query_limit = 500
test_worker_type = validatedLatency
couchbase_index_name = perf_fts_index
couchbase_index_configmap = tests/fts/index/mixed_query/fts_multitype_query_map.json
test_query_mode = multi
couchbase_index_configfile = tests/fts/index/unified/fts_multi_tvector_off.json

[load]
ssl_mode = capella
items = 1000000
size = 1024
workers = 10
doc_gen = unified
num_replies = 100
item_size = 73

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 5000
items = 1000000
workers = 10
time = 600
doc_gen = unified

