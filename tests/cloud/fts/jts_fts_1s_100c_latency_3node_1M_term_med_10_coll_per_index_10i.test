[test_case]
test = perfrunner.tests.fts.FTSLatencyCloudBackupTest

[showfast]
title = Med Term, 10K KV w/sec, wiki 1M x 1KB, 3 node, FTS, s=1 c=100 i=10, 10 collections per index
component = cloud
category = search

[cluster]
mem_quota = 8192
index_mem_quota = 8192
fts_index_mem_quota = 8192
initial_nodes = 3
num_buckets = 1
enable_cpu_cores = false

[collection]
config = collections/1bucket_1scope_100collections_basic.json

[load]
items = 1000000
fts_data_spread_workers = 10

[jts]
jts_repo_branch = korry_jts_enhancements
test_collection_query_mode = default
index_groups = 10
indexes_per_group = 1
jts_instances = 1
test_docid_use_long = 1
test_duration = 600
test_total_docs = 1000000
test_query_workers = 1
test_kv_workers = 60
test_kv_throughput_goal = 10000
test_data_file = ../tests/fts/data/benchmark/med.txt
test_driver = couchbase
test_stats_limit = 1000000
test_stats_aggregation_step = 100
test_debug = false
test_query_type = term
test_query_limit = 10
test_query_field = text
test_mutation_field = text2
test_worker_type = validatedLatency
couchbase_index_name = perf_fts_index
couchbase_index_configfile = tests/fts/index/fts_tvectors_off.json

[backup]
obj_staging_dir = /root
obj_region = us-east-1
aws_credential_path = /root/.ssh

[restore]
backup_storage = s3://fts-wiki-1m
backup_repo = fts_wiki
threads = 8
map_data = bucket-1._default._default=bucket-1.scope-1.collection-1
