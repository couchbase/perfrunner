[test_case]
test = perfrunner.tests.kv.PillowFightTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 3 nodes, 0/100 R/W, 512B JSON items, batch size = 1, Majority Persist Active, s=1 c=1000, 10 buckets
component = kvcloud
category = max_ops
sub_category = {provider}
orderby = zd1

[cluster]
initial_nodes = 3
num_buckets = 10
enable_cpu_cores = false
ui_http = disabled
enable_n2n_encryption = all

[bucket]
replica_number = 2

[collection]
config = collections/10buckets_1scope_100collections_basic.json

[load]
size = 512
items = 2000000
workers = 100
doc_gen = json
durability = 0
ssl_mode = capella

[access]
batch_size = 1
items = 2000000
iterations = 5000
workers = 128
updates = 100
durability = 2
ssl_mode = capella

[clients]
libcouchbase = 3.0.7