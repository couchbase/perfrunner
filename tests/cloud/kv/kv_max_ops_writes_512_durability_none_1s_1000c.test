[test_case]
test = perfrunner.tests.kv.PillowFightDurabilityTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 3 nodes, 0/100 R/W, 512B JSON items, batch size = 1, Durability None, s=1 c=1000
component = kvcloud
category = max_ops
sub_category = {provider}
orderby = za1

[cluster]
initial_nodes = 3
num_buckets = 1
enable_cpu_cores = false
ui_http = disabled
enable_n2n_encryption = all

[bucket]
replica_number = 2

[collection]
config = collections/1bucket_1scope_1000collections_basic.json

[load]
size = 512
items = 20000000
workers = 100
doc_gen = json
durability = 0
ssl_mode = capella

[access]
batch_size = 1
items = 20000000
iterations = 50000
workers = 128
updates = 100
durability = 0
ssl_mode = capella

[clients]
libcouchbase = 3.0.7
