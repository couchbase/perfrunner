[test_case]
test = perfrunner.tests.ycsb.YCSBLatencyTest

[showfast]
title = Latency(ms), Workload A, 3 nodes, 1 bucket x 10m x 1KB, 1k ops/sec
component = kvcloud
category = latency
sub_category = AWS
orderby = aa1

[cluster]
mem_quota = 2130
index_mem_quota = 2130
initial_nodes = 1
num_buckets = 1
enable_cpu_cores = false
enable_n2n_encryption = all

[bucket]
replica_number = 0
eviction_policy = fullEviction
backend_storage = magma

[secondary]
indexer.settings.storage_mode = plasma

[load]
workload_path = workloads/workloada
ycsb_client = couchbase3
items = 10000000
workers = 100

[access]
workload_path = workloads/workloada
ycsb_client = couchbase3
items = 10000000
target = 1000
ops = 0
time = 1200
boost = 12
workers = 25
timeseries = 1
workload_instances = 1
kv_endpoints = 8
ssl_mode = data

[ycsb]
latency_percentiles = 95
average_latency = 1
branch = couchbase3

[stats]
client_processes = java
