[test_case]
test = perfrunner.tests.cloud.CloudIdleDocsTest

[showfast]
title = 3 nodes, Idle, 3m docs, 1 bucket, 40 collections
component = cloud
category = lowend
sub_category = idle
orderby = b_medium

[cluster]
mem_quota = 512
index_mem_quota = 256
fts_index_mem_quota = 256
initial_nodes = 3
num_buckets = 1

[collection]
config = collections/1bucket_1scope_40collections_basic.json

[bucket]
replica_number = 1

[secondary]
indexer.settings.storage_mode = plasma

[load]
workload_path = workloads/workloadca
ycsb_client = couchbase3
items = 3000000
workers = 100

[access]
time = 1800
