[test_case]
test = perfrunner.tests.ycsb.YCSBThroughputTest

[showfast]
title = Avg Throughput (ops/sec), Workload A, 3 nodes, 2 buckets, 40 collections
component = cloud
category = lowend
sub_category = kv
orderby = c_large

[cluster]
mem_quota = 1024
index_mem_quota = 256
fts_index_mem_quota = 256
initial_nodes = 3
num_buckets = 2

[collection]
config = collections/2buckets_1scope_20collections_basic.json

[bucket]
replica_number = 1
failover_min = 120

[secondary]
indexer.settings.storage_mode = plasma

[load]
workload_path = workloads/workloadca
ycsb_client = couchbase3
items = 2250000
workers = 5

[access]
workload_path = workloads/workloadca
ycsb_client = couchbase3
items = 2250000
ops = 500000000
time = 1800
boost = 12
workers = 48
workload_instances = 1
kv_endpoints = 16

[ycsb]
branch = couchbase3

[stats]
client_processes = java
server_processes = projector prometheus
