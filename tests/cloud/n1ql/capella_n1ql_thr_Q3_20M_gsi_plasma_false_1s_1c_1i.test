[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q3, Range Scan, Plasma, request_plus, s=1 c=1 i=1
component = n1qlcloud
category = thr
sub_category = {provider}

[cluster]
initial_nodes = 7
num_buckets = 1
enable_cpu_cores = false
enable_n2n_encryption = all
ui_http = disabled

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
replica_number = 1
eviction_policy = fullEviction
backend_storage = magma

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup
ssl_mode = capella

[index]
fields = capped_small
indexes_per_collection = 1

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 10000
items = 20000000
workers = 20
time = 1200
n1ql_queries = range-scan
n1ql_workers = 120
ssl_mode = capella

[n1ql-range-scan]
statement = SELECT name AS _name, street AS _street FROM `bucket-1` WHERE capped_small=$1;
scan_consistency = request_plus
args = ["{capped_small}"]

[clients]
python_client = 3.2.7