[test_case]
test = perfrunner.tests.kv.ElixirThroughputTest

[showfast]
title = Avg. Throughput (ops/sec), KV, via Direct Nebula, 19 buckets x 500K x 1KB, 80/20 RW
component = cloud
category = elixir
sub_category = Nebula

[cluster]
num_buckets = 19
initial_nodes = 9
enable_n2n_encryption = all
serverless_mode = enabled

[bucket]
replica_number = 2

[collection]
scopes_per_bucket = 1
collections_per_scope = 20

[load]
size = 1024
items = 500000
workers = 10
doc_gen = unified
ssl_mode = capella

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
items = 500000
workers = 10
time = 600
ssl_mode = nebula
nebula_mode = nebula

[clients]
python_client = 3.2.7
