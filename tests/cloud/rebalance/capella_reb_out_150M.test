[test_case]
test = perfrunner.tests.rebalance.CapellaRebalanceKVTest

[showfast]
title = Rebalance-out (min), 4 -> 3, 1 bucket x 150M x 1KB, 10K ops/sec (90/10 R/W), 10%% cache miss rate
component = rebcloud
category = kv
sub_category = {provider}

[cluster]
initial_nodes = 4
num_buckets = 1
enable_cpu_cores = false
ui_http = disabled
enable_n2n_encryption = all

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[load]
items = 150000000
size = 1024
workers = 40
key_fmtr = hex
doc_gen = large
ssl_mode = capella

[hot_load]
items = 150000000
workers = 40
working_set = 5
ssl_mode = capella

[access]
creates = 0
reads = 90
updates = 10
deletes = 0
throughput = 10000
items = 150000000
workers = 20
working_set = 5
working_set_access = 90
ssl_mode = capella

[rebalance]
nodes_after = 3
start_after = 300
stop_after = 300
