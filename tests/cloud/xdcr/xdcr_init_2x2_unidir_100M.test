[test_case]
test = perfrunner.tests.xdcr.UniDirXdcrInitTest

[showfast]
title = Avg. initial XDCR rate (items/sec), 2 -> 2 (2 source nozzles, 4 target nozzles), 1 bucket x 100M x 1KB
component = cloud
category = xdcr

[stats]
server_processes = goxdcr

[cluster]
mem_quota = 51200
initial_nodes = 2 2
num_buckets = 1
enable_cpu_cores = false
ui_http = disabled
enable_n2n_encryption = all

[bucket]
eviction_policy = fullEviction
failover_min = 10

[xdcr_cluster]
sourceNozzlePerNode = 2
targetNozzlePerNode = 4

[load]
items = 100000000
size = 1024
workers = 80
doc_gen = large

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0