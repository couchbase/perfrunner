[test_case]
test = perfrunner.tests.kv.EvictionTest

[showfast]
title = Avg ejections/sec, NRU - Ephemeral, single node, s=1 c=100
component = kv
category = cache

[cluster]
mem_quota = 51200
initial_nodes = 1
num_buckets = 1

[bucket]
bucket_type = ephemeral
eviction_policy = nruEviction
replica_number = 0

[collection]
config = collections/1bucket_1scope_100collections_basic.json

[load]
items = 35000000
size = 1024
workers = 100

[access]
creates = 100
reads = 0
updates = 0
deletes = 0
workers = 100
items = 35000000
throughput = 200000
time = 3600
async = 1

[clients]
libcouchbase = 3.0.2
python_client = git+https://github.com/couchbase/couchbase-python-client@a193cbdc7763aa3fa563bd8d139091a4c220a240
