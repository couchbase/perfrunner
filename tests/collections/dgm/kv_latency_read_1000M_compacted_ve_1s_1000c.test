[test_case]
test = perfrunner.tests.kv.ReadLatencyDGMCompactedTest

[showfast]
title = latency (ms), 4 nodes, 1B x 1KB, 15K ops/sec (90/10 R/W), 5%% cache miss rate, no compaction, value eviction, s=1 c=1000
component = kv
category = dgm

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
eviction_policy = valueOnly

[collection]
config = collections/1bucket_1scope_1000collections_basic.json

[load]
items = 1000000000
size = 1024
workers = 80
key_fmtr = hex
doc_gen = large

[hot_load]
items = 1000000000
workers = 100
working_set = 5

[access]
creates = 0
reads = 90
updates = 10
deletes = 0
items = 1000000000
working_set = 5
working_set_access = 95
workers = 40
throughput = 15000
time = 3600

[clients]
libcouchbase = 3.0.1
python_client = git+https://github.com/couchbase/couchbase-python-client@fd3879c31bf8f0737d776dee59fb9a54fc5b3ced
