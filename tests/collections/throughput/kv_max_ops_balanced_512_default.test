[test_case]
test = perfrunner.tests.kv.PillowFightTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 2 nodes, 50/50 R/W, 512B JSON items, 1K batch size, default collection
component = kv
category = max_ops
orderby = mixed

[cluster]
mem_quota = 51200
initial_nodes = 2
num_buckets = 1

[collection]
config = collections/1bucket_default.json

[load]
size = 512
items = 20000000
workers = 50
doc_gen = json

[access]
items = 20000000
iterations = 40000
workers = 50
updates = 50

[clients]
libcouchbase = 3.0.2
python_client = git+https://github.com/couchbase/couchbase-python-client@a193cbdc7763aa3fa563bd8d139091a4c220a240

