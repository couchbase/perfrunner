[test_case]
test = perfrunner.tests.dcp.DCPDrainThroughputTest

[showfast]
title = DCP Throughput, 1 node, 250M x 1KB, dcpdrain client, compression enabled, post warmup
component = kv
category = dcp

[stats]
client_processes = dcpdrain

[cluster]
