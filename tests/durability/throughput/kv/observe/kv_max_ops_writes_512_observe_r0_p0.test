[test_case]
test = perfrunner.tests.kv.PillowFightDurabilityTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 4 nodes, 0/100 R/W, 512B JSON items, batch size = 1, ReplicateTo=0, PersistTo=0
component = kv
category = max_ops
orderby = za2

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1

[bucket]
replica_number = 2

[load]
size = 512
items = 20000000
workers = 128
doc_gen = json

[access]
batch_size = 1
items = 20000000
iterations = 5000000
workers = 128
updates = 100
replicate_to = 0
persist_to = 0
connstr_params = {'ipv6': 'allow', 'enable_tracing': 'false', 'durability_interval': 0.02}

[clients]
libcouchbase = 3.0.2
python_client = git+https://github.com/couchbase/couchbase-python-client@a193cbdc7763aa3fa563bd8d139091a4c220a240
