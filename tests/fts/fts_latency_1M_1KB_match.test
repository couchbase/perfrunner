[test_case]
test = perfrunner.tests.fts.FTSLatencyTest
title =  PhraseQuery, no kv-load, wiki 1M x 1KB
summary = FTS Latency Test
larger_is_better = true
fts = true

[access]
time = 1200

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
fts_index_mem_quota = 20000

[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 10
type = match
query_file = perfrunner/tests/FTS/phrase.txt
query_size = 10
logfile = /tmp/fts_latency_matchphrase_1M_1K.txt
backup_path = /home/wiki1M
orderby = q13_match
field = text