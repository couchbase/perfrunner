[test_case]
test = perfrunner.tests.fts.FTSThroughputTest
title =  Med Term, no kv-load, wiki 1M x 1KB
summary = FTS throughput Test
larger_is_better = true
fts = true

[access]
time = 600

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
fts_index_mem_quota = 20000

[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 30
type = term
query_file = perfrunner/tests/FTS/midterm.txt
query_size = 10
logfile = /tmp/fts_thput_termmed_1M_1K.txt
orderby = q2_medium_term
backup_path = /home/wiki1M
field = text