[test_case]
test = perfrunner.tests.elastic.ElasticThroughputTest

[showfast]
title = DocIdQuery, no kv-load, wiki 1M x 1KB
component = fts
category = benchmark_3_nodes
sub_category = Throughput

[fts]
items = 1000000
name  = perf_elastic_index
port = 8094
worker = 400
type = ids
query_file = tests/fts/data/docid.txt
