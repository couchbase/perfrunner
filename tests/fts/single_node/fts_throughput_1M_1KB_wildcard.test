[test_case]
test = perfrunner.tests.fts.FTSThroughputTest

[showfast]
title = WildcardQuery, no kv-load, wiki 1M x 1KB
component = fts
category = benchmark
sub_category = Throughput

[access]
time = 600

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
fts_index_mem_quota = 20000

[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 10
type = wildcard
query_file = tests/fts/data/wildcard.txt
query_size = 10
logfile = /tmp/fts_thput_wildcard_1M_1K.txt
backup_path = /fts/backup
repo_path = fts_wiki
field = text
orderby = q0b00001111
index_configfile = tests/fts/index/fts_tvectors_off.json
