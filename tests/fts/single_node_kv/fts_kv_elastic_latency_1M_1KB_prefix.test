[test_case]
test = perfrunner.tests.elastic.ElasticLatencyTest
title = PrefixQuery, wiki 1M x 1KB, 1K sets/sec kv load
component = fts
category = benchmark_kv
sub_category = Latency

[stats]
lat_interval = 0.1

[fts]
items = 1000000
name  = perf_elastic_index
port = 8094
worker= 1
type = prefix
query_file = tests/fts/data/prefix.txt
query_size = 8
elastic = 1
logfile = /tmp/elastic_latency_prefix_1M_1K.txt
orderby = q0b00001110
backup_path = /fts/backup
repo_path = fts_wiki
field = text
index_configfile = tests/fts/index/elastic_6shards.json

[access]
time = 1200
fts_updates_swap = 100
workers = 2
throughput = 1000

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
