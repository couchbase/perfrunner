[test_case]
test = perfrunner.tests.elastic.ElasticThroughputTest
title = DocIdQuery, wiki 1M x 1KB, 1K sets/sec kv load
component = fts
category = kvthroughput

[fts]
items = 1000000
name  = perf_elastic_index
port = 8094
worker= 100
type = ids
query_file = tests/fts/data/docid.txt
query_size = 10
elastic = 1
logfile = /tmp/elastic_thput_docid_1M_1K.txt
orderby = q0b00010001
backup_path = /fts/backup
repo_path = fts_wiki
field = text
index_configfile = tests/fts/index/elastic_6shards.json

[access]
time = 600
fts_updates_swap = 100
workers = 2
throughput = 1000

[cluster]
mem_quota = 51024
initial_nodes = 1
num_buckets = 1
