[test_case]
test = perfrunner.tests.fts.FTSLatencyLoadTest

[showfast]
title = Low Term, 10K KV w/sec, wiki 1M x 1KB, 3 node, 20 buckets,  FTS, s=1 c=1 i=1 per bucket
component = jts
category = capella
sub_category = Latency
orderby = q0b00000018

[cluster]
mem_quota = 51024
initial_nodes = 3
num_buckets = 20
fts_index_mem_quota = 20000

[collection]
config = collections/20buckets_1scope_1collection_basic.json

[load]
items = 1000000
size = 1024
workers = 10
doc_gen = unified
num_replies = 100
item_size = 73

[jts]
jts_repo_branch = multi_query_support
logging_method = bucket_wise
test_collection_query_mode = default
index_groups = 1
indexes_per_group = 1
jts_instances = 1
test_duration = 600
test_total_docs = 1000000
test_query_workers = 1
test_kv_workers = 6
test_kv_throughput_goal = 10000
test_data_file = ../tests/fts/data/benchmark/low.txt
test_driver = couchbase
test_stats_limit = 1000000
test_stats_aggregation_step = 100
test_debug = false
test_query_type = term
test_query_limit = 10
test_query_field = fts_field1
test_worker_type = validatedLatency
couchbase_index_name = perf_fts_index
couchbase_index_configfile = tests/fts/index/unified/fts_tvectors_off.json


[profiling]
services = fts
