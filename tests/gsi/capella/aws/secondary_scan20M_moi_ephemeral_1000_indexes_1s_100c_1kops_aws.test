[test_case]
test = perfrunner.tests.secondary.CloudSecondaryIndexingScanTest

[showfast]
title = 1 bucket x 50M x 1KB, 10K KV ops/sec, 1000 indexes, MOI Ephemeral, s=1 c=100, 128 Concurrency
component = secondarycloud
category = lat
sub_category = AWS

[stats]
server_processes = projector
lat_interval = 0.5

[cluster]
mem_quota = 25600
index_mem_quota = 25600
initial_nodes = 6
num_buckets = 1
enable_cpu_cores = false
ui_http = disabled
enable_n2n_encryption = all

[compaction]
db_percentage = 100
view_percentage = 100

[bucket]
bucket_type = ephemeral
eviction_policy = nruEviction
replica_number=0
replica_index=0

[collection]
config = collections/1bucket_1scope_100collections_basic.json

[load]
items = 20000000
size = 1024
workers = 100
doc_gen = grouped
doc_groups = 1
ssl_mode = capella

[secondary]
indexes = tests/gsi/index_defs/1bucket_1scope_100collections_1000_indexes_1.json
cbindexperf_configfile = tests/gsi/scan_config/config_scan_1000_indexes_1s_100c_1.json
indexer.settings.storage_mode = plasma
indexer.settings.gc_percent = 200
indexer.settings.max_cpu_percent = 4800
queryport.client.usePlanner = false
queryport.client.log_level = Warn
projector.backChanSize = 500000
disable_perindex_stats = True
indexer.settings.build.batch_size = 100
cbindexperf_concurrency = 128
cbindexperf_repeat = 29999

[access]
updates = 100
items = 20000000
throughput = 1000
workers = 20
doc_gen = grouped
doc_groups = 1
ssl_mode = capella
