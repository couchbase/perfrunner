lat_interval = 0.5

[cluster]
mem_quota = 30000
index_mem_quota = 300000
kernel_mem_limit = 310G
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100
view_percentage = 100

[bucket]
replica_number=0
