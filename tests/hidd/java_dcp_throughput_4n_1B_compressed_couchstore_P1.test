[test_case]
test = perfrunner.tests.magma.JavaDCPThroughputDGMTest

[showfast]
title = DCP Throughput, 4 nodes, 1B x 1KB, Java client, compression enabled, Couchstore
component = hidd
category = dcp

[stats]
client_processes = java

[cluster]
mem_quota = 5120
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 15G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 0
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 1000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large

[java_dcp]
config = perf/config/compression-enabled.properties
