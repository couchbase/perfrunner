[test_case]
test = perfrunner.tests.magma.CompactionMagmaTest

[showfast]
title = Full compaction time (min), 4 nodes, 10B x 1KB, 15K ops/sec (90/10 R/W), 5%% cache miss rate, 1%% Resident Ratio, Magma
component = hidd
category = compact

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
