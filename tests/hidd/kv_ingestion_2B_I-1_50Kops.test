[test_case]
test = perfrunner.tests.kv.IngestionTest

[showfast]
title = Avg. write latency (sec), Workload I-1, 4 nodes, 2B x 1KB, 50K inserts/sec
component = kv
category = hidd
sub_category = Ingestion

[cluster]
mem_quota = 20480
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 34G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
size = 1024
key_fmtr = hex
doc_gen = large
workers = 100
items = 1000000000

[access]
creates = 100
reads = 0
updates = 0
deletes = 0
workers = 100
items = 1000000000
ops = 1000000000
throughput = 50000

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0