num_writer_threads = 64

[load]
items = 1000000000
size = 1024
workers = 128
doc_gen = large

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 999999999
items = 1000000000
workers = 128
time = 3600
durability = 3

[clients]
libcouchbase = 3.0.0-beta.2
python_client = 3.0.0-beta.2