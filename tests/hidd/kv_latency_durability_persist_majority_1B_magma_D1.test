[test_case]
test = perfrunner.tests.magma.EnhancedDurabilityLatencyDGMTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 1B x 1KB, 0/100 R/W, Unlimited Ops, Durability Persist Majority, Magma
component = hidd
category = latency

[cluster]
mem_quota = 15360
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 25G
