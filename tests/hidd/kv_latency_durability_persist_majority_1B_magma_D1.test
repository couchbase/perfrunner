[test_case]
test = perfrunner.tests.magma.EnhancedDurabilityLatencyDGMTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 1B x 1KB, 0/100 R/W, 500 ops/sec, Durability Persist Majority, 2%% Resident Ratio, Magma
component = hidd
category = durability
sub_category = Latency

[cluster]
mem_quota = 15360
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 25G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 2
backend_storage = magma
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 1000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large

[extra_access]
run_extra_access = true
updates = 100
creates = 0
deletes = 0
reads = 0
workers = 128
items = 1000000000
ops = 1000000000
time = 86400
requestdistribution = uniform
power_alpha = 0
zipf_alpha = 0
durability = 0
async = 0

