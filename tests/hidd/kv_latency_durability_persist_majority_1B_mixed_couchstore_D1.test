[test_case]
test = perfrunner.tests.magma.EnhancedMixedDurabilityLatencyDGMTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 1B x 1KB, 80/20 R/W, 2000 ops/sec, Durability Persist Majority, 1%% Resident Ratio, Couchstore
component = hidd
category = durability
sub_category = Latency

[cluster]
mem_quota = 7680
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 2
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 1000000000
size = 1024
workers = 128
doc_gen = large

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 2000
items = 1000000000
workers = 128
time = 3600
durability = 3
