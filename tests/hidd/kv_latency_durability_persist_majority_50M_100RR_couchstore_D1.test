[test_case]
test = perfrunner.tests.magma.EnhancedDurabilityLatencyDGMTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 50M x 1KB, 0/100 R/W, 500 ops/sec, Durability Persist Majority, 100%% Resident Ratio, Couchstore
component = hidd
category = durability
sub_category = Latency

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 60G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 2
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 50000000
size = 1024
workers = 128
doc_gen = large

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 500
items = 50000000
workers = 128
time = 3600
durability = 3