[test_case]
test = perfrunner.tests.magma.MixedLatencyCDCTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 100M x 1KB, 100%% RR, 80K ops/sec, 50/50 R/W, s=2 c=150, 50 CDC collections, History=10hrs, 1000 dedup/sec
component = kv
category = cdc
sub_category = Latency
orderby = rr100_d0_dd01000_h36000

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1
enable_cpu_cores = false

[collection]
config = collections/1bucket_2scopes_150collections_history.json

[bucket]
eviction_policy = fullEviction
backend_storage = magma
history_seconds = 36000

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 100000000
size = 1024
workers = 128
doc_gen = large

[extra_access]
run_extra_access = true
updates = 100
creates = 0
deletes = 0
reads = 0
workers = 128
items = 100000000
ops = 100000000
time = 86400
requestdistribution = uniform
power_alpha = 0
zipf_alpha = 0
durability = 0
async = 0

[access]
creates = 0
reads = 50
updates = 50
deletes = 0
items = 100000000
workers = 128
throughput = 80000
power_alpha = 6000
time = 1800
latency_percentiles = 50,99

[clients]
python_client = 3.2.7
