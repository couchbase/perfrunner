[test_case]
test = perfrunner.tests.magma.MixedLatencyDGMTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 1B x 1KB, 15K ops/sec (25/50/25 C/R/W), 10%% cache miss rate, 2%% Resident Ratio, Magma
component = hidd
category = latency

[cluster]
mem_quota = 10240
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 1000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large

[hot_load]
items = 1000000000
workers = 128
working_set = 1

[extra_access]
run_extra_access = true
updates = 100
creates = 0
deletes = 0
reads = 0
workers = 128
items = 1000000000
ops = 1000000000
time = 86400
requestdistribution = uniform
power_alpha = 0
zipf_alpha = 0
durability = 0
async = 0

[access]
creates = 25
reads = 50
updates = 25
deletes = 0
items = 1000000000
working_set = 1
working_set_access = 90
workers = 128
throughput = 15000
time = 3600

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0