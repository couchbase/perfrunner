[test_case]
test = perfrunner.tests.magma.MixedLatencyCDCTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 20M x 1KB, 100%% RR, 21500 ops/sec, ~50/50 R/W, s=2 c=150, 50 CDC collections, Mixed Durability (None + Persist Majority), History=Off, ~200 dedup/sec
component = kv
category = cdc
sub_category = Latency
orderby = rr100_d3_dd00100_h00000

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1
enable_cpu_cores = false

[collection]
config = collections/1bucket_2scopes_150collections_history.json

[bucket]
replica_number = 1
backend_storage = magma
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 20000000
size = 1024
workers = 128
doc_gen = large

