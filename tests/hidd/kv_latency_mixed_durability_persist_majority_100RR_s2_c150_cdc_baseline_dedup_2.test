[test_case]
test = perfrunner.tests.magma.MixedLatencyCDCTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 20M x 1KB, 100%% RR, 5000 ops/sec, 50/50 R/W, s=2 c=3, 2 CDC collections, Durability Persist Majority, History=Off, ~100 dedup/sec
component = kv
category = cdc
sub_category = Latency
orderby = rr100_d3_dd00100_h00000

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1
enable_cpu_cores = false

[collection]
config = collections/1bucket_2scopes_3collections_history.json

[bucket]
