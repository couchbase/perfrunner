[test_case]
test = perfrunner.tests.magma.ReadLatencyDGMTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 50M x 20KB, 15K ops/sec (5/90/5 C/R/W), Uniform distribution, 2%% Resident Ratio, Couchstore
component = hidd
category = latency

[cluster]
mem_quota = 10240
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 50000000
size = 20480
workers = 128
key_fmtr = hex
doc_gen = incompressible

[access]
creates = 5
reads = 90
updates = 5
deletes = 0
items = 50000000
workers = 128
throughput = 15000
time = 1800
requestdistribution = uniform
