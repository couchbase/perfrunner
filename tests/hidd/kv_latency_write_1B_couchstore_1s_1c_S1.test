[test_case]
test = perfrunner.tests.magma.WriteLatencyDGMTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 1B x 1KB, 15K ops/sec (45/10/45 C/R/W), s=1 c=1, Uniform distribution, 2%% Resident Ratio, Couchstore
component = hidd
category = latency

[cluster]
mem_quota = 10240
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 1000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large

[access]
creates = 45
reads = 10
updates = 45
deletes = 0
items = 1000000000
workers = 128
throughput = 15000
time = 1800
requestdistribution = uniform
