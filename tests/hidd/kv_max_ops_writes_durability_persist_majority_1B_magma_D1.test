[test_case]
test = perfrunner.tests.magma.PillowFightDGMTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 4 nodes, 0/100 R/W, 1 bucket x 1B x 512B JSON items, batch size = 1, Persist Majority, Magma
component = hidd
category = ops

[cluster]
mem_quota = 7680
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 15G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 2
backend_storage = magma
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
size = 512
items = 1000000000
workers = 128
doc_gen = json
durability = 0

[extra_access]
run_extra_access = true
updates = 100
creates = 0
deletes = 0
reads = 0
workers = 128
items = 1000000000
ops = 1000000000
time = 86400
requestdistribution = uniform
power_alpha = 0
zipf_alpha = 0
durability = 0
async = 0

[access]
batch_size = 1
items = 1000000000
iterations = 100000
workers = 128
updates = 100
durability = 3

[clients]
libcouchbase = 3.0.1
python_client = git+https://github.com/couchbase/couchbase-python-client@fd3879c31bf8f0737d776dee59fb9a54fc5b3ced