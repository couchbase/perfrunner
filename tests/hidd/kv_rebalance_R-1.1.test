[test_case]
test = perfrunner.tests.rebalance.RebalanceKVTest

[showfast]
title = Rebalance time (min), 4 -> 4 (swap 1), 2B x 1KB, 15K ops/sec (90/10 R/W), Power distribution (Î±=140)

[cluster]
mem_quota = 20480
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 34G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 2000000000
size = 1024
workers = 100
key_fmtr = hex
doc_gen = large

[hot_load]
items = 2000000000
workers = 100
working_set = 1.6

[access]
creates = 5
reads = 90
updates = 5
deletes = 0
items = 2000000000
workers = 40
throughput = 15000
power_alpha = 140

[rebalance]
nodes_after = 4
swap = 1
start_after = 1800

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0