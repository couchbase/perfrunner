[test_case]
test = perfrunner.tests.magma.RebalanceKVDGMTest

[showfast]
title = Rebalance-swap (min), 4 -> 4, 10B x 1KB, 15K ops/sec (90/10 R/W), 10%% cache miss rate, 1%% Resident Ratio, Magma
component = hidd
category = reb

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma
failover_min = 120
failover_max = 600

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 10000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large
use_backup = true
key_prefix = 309814

[hot_load]
items = 10000000000
workers = 128
working_set = 1

[extra_access]
run_extra_access = true
updates = 100
creates = 0
deletes = 0
reads = 0
workers = 128
items = 10000000000
ops = 10000000000
time = 86400
requestdistribution = uniform
power_alpha = 0
zipf_alpha = 0
durability = 0
async = 0

[access]
creates = 5
reads = 90
updates = 5
deletes = 0
items = 10000000000
workers = 128
throughput = 15000
working_set = 1
working_set_access = 90

[rebalance]
nodes_after = 4
swap = 1
start_after = 1800
stop_after = 1800

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0

[backup]
backup_directory = /data2/4n_10b
