[test_case]
test = perfrunner.tests.magma.ThroughputDGMMagmaTest

[showfast]
title = Avg Throughput (ops/sec), 6 nodes, 1 bucket x 3B x 1KB, 50/50 R/W, Uniform distribution, 10%% Resident Ratio, Couchstore
component = hidd
category = ops

[cluster]
mem_quota = 102400
initial_nodes = 6
num_buckets = 1
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 3000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large

[access]
creates = 0
reads = 50
updates = 50
deletes = 0
items = 3000000000
workers = 128
time = 1800
requestdistribution = uniform

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0
