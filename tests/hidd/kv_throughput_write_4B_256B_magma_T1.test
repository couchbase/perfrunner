[test_case]
test = perfrunner.tests.magma.ThroughputDGMMagmaTest

[showfast]
title = Avg Throughput (ops/sec), 4 nodes, 1 bucket x 4B x 256B, 20/80 R/W, Uniform distribution, 2%% Resident Ratio, Magma
component = hidd
category = ops

[cluster]
mem_quota = 10240
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
