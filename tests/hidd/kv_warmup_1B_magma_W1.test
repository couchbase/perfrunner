[test_case]
test = perfrunner.tests.magma.WarmupDGMTest

[showfast]
title = Warmup time (min), 4 nodes, 1 bucket x 1B x 1KB, 2%% Resident Ratio, Magma
component = hidd
category = warmup

[cluster]
mem_quota = 10240
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[stats]
interval = 1

[bucket]
backend_storage = magma
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 1000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large
use_backup = true
key_prefix = f017e9

[extra_access]
run_extra_access = true
updates = 100
creates = 0
deletes = 0
reads = 0
workers = 128
items = 1000000000
ops = 1000000000
time = 86400
requestdistribution = uniform
power_alpha = 0
zipf_alpha = 0
durability = 0
async = 0

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 20000
items = 1000000000
workers = 128
time = 600

[backup]
backup_directory = /data2/4n_1b
