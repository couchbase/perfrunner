[test_case]
test = perfrunner.tests.magma.N1QLLatencyHiDDTest

[showfast]
title = Q2, 1 bucket x 10B x 1KB, Singleton Unique Lookup, 3K queries/sec, not_bounded, Plasma, 3 Indexer Nodes, 3 Partitions, Compressed, 10%% Index Resident Ratio, Couchstore
component = hidd
category = n1ql

[cluster]
mem_quota = 51200
index_mem_quota = 71680
initial_nodes = 8
num_buckets = 1
kernel_mem_limit = 91G
kernel_mem_limit_services = index
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[secondary]
indexer.settings.storage_mode = plasma
indexer.settings.max_cpu_percent = 4800

[load]
items = 10000000000
size = 1024
workers = 100
doc_gen = reverse_lookup

[index]
statements =
    CREATE INDEX by_email ON `bucket-1`(email) PARTITION BY HASH(META().id) WITH {"num_partition": 3};

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 10000
items = 10000000000
workers = 20
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_throughput = 3000
n1ql_workers = 240

[n1ql-singleton-unique-lookup]
statement = SELECT * FROM `bucket-1` WHERE email = $1;
scan_consistency = not_bounded
args = ["{email}"]
