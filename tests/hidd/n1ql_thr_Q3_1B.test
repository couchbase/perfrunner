[test_case]
test = perfrunner.tests.magma.N1QLThroughputHiDDTest

[showfast]
title = Q3, 1 bucket x 1B x 1KB, Range Scan, not_bounded, Plasma, 1 Indexer Node, 10%% Index Resident Ratio
component = hidd
category = n1ql

[cluster]
mem_quota = 5120
index_mem_quota = 21504
initial_nodes = 6
num_buckets = 1
kernel_mem_limit = 28G
kv_kernel_mem_limit = 10G
kernel_mem_limit_services = kv index
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[secondary]
indexer.settings.storage_mode = plasma
indexer.settings.max_cpu_percent = 4800

[load]
items = 1000000000
size = 1024
workers = 100
doc_gen = reverse_lookup
use_backup = true
key_prefix = 12e097

[index]
statements =
    CREATE INDEX by_capped_small ON `bucket-1`(capped_small);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 15000
items = 1000000000
workers = 20
time = 1200
n1ql_queries = range-scan
n1ql_workers = 240
workload_instances = 1

[n1ql-range-scan]
statement = SELECT name AS _name, street AS _street FROM `bucket-1` WHERE capped_small=$1;
scan_consistency = not_bounded
args = ["{capped_small}"]

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0

[backup]
backup_directory = /data2/n1ql_1b
