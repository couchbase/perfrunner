[test_case]
test = perfrunner.tests.magma.InitialandIncrementalSecondaryIndexHiDDTest

[showfast]
title = 1 bucket x 10B x 1KB, 10K KV ops/sec, 3 Indexer Nodes, 3 Partitions, Compressed, Plasma, 10%% Index Resident Ratio
component = hidd
category = gsi

[stats]
server_processes = projector

[cluster]
mem_quota = 51200
index_mem_quota = 71680
initial_nodes = 7
num_buckets = 1
kernel_mem_limit = 91G
kernel_mem_limit_services = index
enable_cpu_cores = false

[bucket]
replica_index=0
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[collection]
config = collections/1bucket_default.json

[load]
items = 10000000000
size = 1024
workers = 100
use_backup = true

[secondary]
indexes = tests/gsi/index_defs/1bucket_default_1_index_1_3partitions.json
indexer.settings.storage_mode = plasma
indexer.settings.max_cpu_percent = 4800
projector.maxCpuPercent = 1200

[hot_load]
items = 10000000000
workers = 100
working_set = 10

[access]
updates = 100
ops = 100000000
items = 10000000000
throughput = 10000
workers = 20
working_set = 10
working_set_access = 90

[backup]
backup_directory = /data2/gsi_10b
