[test_case]
test = perfrunner.tests.magma.JavaDCPThroughputDGMTest

[showfast]
title = DCP Throughput, 1 node, 100M x 1KB, Java client, compression enabled, Couchstore
component = hidd
category = single

[stats]
client_processes = java

[cluster]
mem_quota = 20480
initial_nodes = 1
num_buckets = 1
kernel_mem_limit = 30G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 0
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16
backend = couchdb;cursor_dropping_checkpoint_mem_upper_mark=100

[load]
items = 100000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large
mem_low_wat = 134217728
mem_high_wat = 268435456

[java_dcp]
config = perf/config/compression-enabled.properties

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0
