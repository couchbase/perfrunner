[test_case]
test = perfrunner.tests.magma.SingleNodeMixedLatencyDGMTest

[showfast]
title = Latency(ms), 1 nodes, 100M x 1KB, 15K ops/sec, 50/50 R/W, Uniform distribution, Couchstore
component = hidd
category = single

[cluster]
mem_quota = 2048
initial_nodes = 1
num_buckets = 1
kernel_mem_limit = 10G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
replica_number = 0

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16
backend = couchdb;cursor_dropping_checkpoint_mem_upper_mark=100

[load]
items = 100000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large

[access]
creates = 0
reads = 50
updates = 50
deletes = 0
items = 100000000
workers = 512
throughput = 15000
time = 1800
requestdistribution = uniform

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0