[test_case]
test = perfrunner.tests.magma.RebalanceKVDGMTest

[showfast]
title = Rebalance-out (min), 3 -> 2, 250M x 1KB, 15K ops/sec (90/10 R/W), 10%% cache miss rate, 2.4%% Resident Ratio, 128 vbuckets, Magma
component = hidd
category = reb

[cluster]
mem_quota = 6144
initial_nodes = 3
num_buckets = 1
kernel_mem_limit = 12G
kernel_mem_limit_services = kv
enable_cpu_cores = false
num_vbuckets = 128

[bucket]
eviction_policy = fullEviction
backend_storage = magma
failover_min = 120

[bucket_extras]
num_reader_threads = disk_io_optimized
num_writer_threads = disk_io_optimized

[load]
items = 250000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large
use_backup = true
key_prefix = dac318

[hot_load]
items = 250000000
workers = 128
working_set = 1

[extra_access]
run_extra_access = true
updates = 100
creates = 0
deletes = 0
reads = 0
workers = 128
items = 250000000
ops = 250000000
time = 86400
requestdistribution = uniform
power_alpha = 0
zipf_alpha = 0
durability = 0
async = 0

[access]
creates = 5
reads = 90
updates = 5
deletes = 0
items = 250000000
workers = 128
throughput = 15000
working_set = 1
working_set_access = 90

[rebalance]
nodes_after = 2
start_after = 180
stop_after = 180

[backup]
backup_directory = /data2/3n_250m_128v
