[test_case]
test = perfrunner.tests.magma.LoadThroughputDGMMagmaTest

[showfast]
title = Throughput, 1 nodes, 100M x 1KB, Load, Couchstore
component = hidd
category = single

[cluster]
mem_quota = 20480
initial_nodes = 1
num_buckets = 1
kernel_mem_limit = 30G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
replica_number = 0

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16

[load]
items = 100000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large
mem_low_wat = 134217728
mem_high_wat = 268435456
