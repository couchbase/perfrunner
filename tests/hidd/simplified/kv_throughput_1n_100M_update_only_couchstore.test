[test_case]
test = perfrunner.tests.magma.SingleNodeThroughputDGMMagmaTest

[showfast]
title = Throughput, 1 nodes, 100M x 1KB, update only, Couchstore
component = hidd
category = single

[cluster]
mem_quota = 20480
initial_nodes = 1
num_buckets = 1
kernel_mem_limit = 30G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
replica_number = 0

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16
backend = couchdb;cursor_dropping_checkpoint_mem_upper_mark=100

[load]
items = 100000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large
mem_low_wat = 134217728
mem_high_wat = 268435456

[hot_load]
items = 100000000
workers = 128
working_set = 5

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
items = 100000000
workers = 512
time = 3600
working_set = 5
working_set_access = 70