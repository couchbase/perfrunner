[test_case]
test = perfrunner.tests.magma.LoadThroughputDGMMagmaTest

[showfast]
title = Throughput, 1 nodes, 1B x 1KB, Load, Magma
component = hidd
category = single

[cluster]
mem_quota = 10240
initial_nodes = 1
num_buckets = 1
num_vbuckets = 128
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
replica_number = 0
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16

[load]
items = 1000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0