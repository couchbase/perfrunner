[test_case]
test = perfrunner.tests.magma.ThroughputDGMMagmaTest

[showfast]
title = Throughput, 1 node, 1B x 1KB, read only, Uniform distribution, 1%% Resident Ratio, Magma
component = hidd
category = single

[cluster]
mem_quota = 10240
initial_nodes = 1
num_buckets = 1
num_vbuckets = 128
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
replica_number = 0
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16

[load]
items = 1000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large
use_backup = true
key_prefix = 92c04a

[extra_access]
