[test_case]
test = perfrunner.tests.magma.LoadThroughputDGMMagmaTest

[showfast]
title = Throughput, 2 nodes, 1B x 256B, Incompressible, Load, Magma
component = hidd
category = compress

[cluster]
mem_quota = 51200
initial_nodes = 2
num_buckets = 1
kernel_mem_limit = 60G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[load]
items = 1000000000
size = 256
workers = 100
doc_gen = incompressible

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0