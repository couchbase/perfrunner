[test_case]
test = perfrunner.tests.magma.UniDirXdcrInitHiDDTest

[showfast]
title = Avg. initial XDCR rate (items/sec), 1 -> 1 (2 source nozzles, 4 target nozzles), 1 bucket x 500M x 1KB, s=1, c=1000, 1%% Resident Ratio, Magma
component = hidd
category = xdcr

[stats]
server_processes = goxdcr

[cluster]
mem_quota = 5120
initial_nodes = 1 1
num_buckets = 1
kernel_mem_limit = 10G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[collection]
config = collections/1bucket_1scope_1000collections_basic.json

[bucket]
replica_number = 0
backend_storage = magma
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 64

[xdcr_cluster]
sourceNozzlePerNode = 2
targetNozzlePerNode = 4

[load]
items = 500000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large
