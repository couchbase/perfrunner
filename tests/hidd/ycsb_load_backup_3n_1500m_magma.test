[test_case]
test = perfrunner.tests.magma.YCSBLoadBackupHIDDTest

[showfast]
title = 3 nodes, 1 bucket x 1.5B x 1KB, Magma
component = hidd
category = ycsb
orderby = am

[cluster]
mem_quota = 102400
initial_nodes = 3
num_buckets = 1
kernel_mem_limit = 120G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 1
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16

[load]
workload_path = workloads/workloada
ycsb_client = couchbase3
items = 1500000000
workers = 640
kv_endpoints = 128
size = 1000

[extra_access]
run_extra_access = true
workload_path = workloads/workloadupdate
ycsb_client = couchbase3
items = 1500000000
ops = 750000000
time = 86400
boost = 12
workers = 640
kv_endpoints = 128
workload_instances = 2
requestdistribution = uniform

[ycsb]
branch = couchbase3

[stats]
client_processes = java

[backup]
backup_directory = /data2/3n_1500m_1kb