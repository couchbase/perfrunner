[test_case]
test = perfrunner.tests.magma.YCSBLoadThroughputHIDDTest

[showfast]
title = Avg Throughput (ops/sec), Load, 3 nodes, 1 bucket x 1.5B x 1KB, 1%% Resident Ratio, Couchstore
component = hidd
category = ycsb
orderby = lml
sub_category = Throughput

[cluster]
mem_quota = 10240
initial_nodes = 3
num_buckets = 1
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 1
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16

[load]
workload_path = workloads/workloada
ycsb_client = couchbase3
items = 1500000000
workers = 320
kv_endpoints = 16
size = 1000

[ycsb]
branch = couchbase3

[stats]
client_processes = java
