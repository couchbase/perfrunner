[test_case]
test = perfrunner.tests.magma.YCSBThroughputHIDDTest

[showfast]
title = Avg Throughput (ops/sec), Workload A, 3 nodes, 1 bucket x 1.5B x 1KB, 1%% Resident Ratio, Magma
component = hidd
category = ycsb
orderby = aml
sub_category = Throughput

[cluster]
mem_quota = 10240
initial_nodes = 3
num_buckets = 1
kernel_mem_limit = 20G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 1
eviction_policy = fullEviction
backend_storage = magma

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16

[load]
workload_path = workloads/workloada
ycsb_client = couchbase3
items = 1500000000
workers = 640
kv_endpoints = 128
size = 1000
use_backup = true

[extra_access]
run_extra_access = true
workload_path = workloads/workloadupdate
ycsb_client = couchbase3
items = 1500000000
ops = 750000000
time = 86400
boost = 12
workers = 640
kv_endpoints = 128
workload_instances = 2
requestdistribution = uniform

[access]
workload_path = workloads/workloada
ycsb_client = couchbase3
items = 1500000000
ops = 1500000000
time = 1800
boost = 12
workers = 640
kv_endpoints = 128
workload_instances = 6

[ycsb]
branch = couchbase3

[stats]
client_processes = java

[backup]
backup_directory = /data2/3n_1500m_1kb
