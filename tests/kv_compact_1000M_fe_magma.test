[load]
items = 1000000000
size = 1024
workers = 80
key_fmtr = hex
doc_gen = large

[hot_load]
items = 1000000000
workers = 100
working_set = 5

[access]
creates = 0
reads = 90
updates = 10
deletes = 0
items = 1000000000
working_set = 5
working_set_access = 95
workers = 15
throughput = 15000
async = 1
