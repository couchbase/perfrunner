[test_case]
test = perfrunner.tests.kv.CompactionTest

[showfast]
title = Full compaction time (min), 4 nodes, 1B x 1KB, 15K ops/sec (90/10 R/W), 5%% cache miss rate, Magma
component = kv
category = compact

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1

[bucket]
eviction_policy = fullEviction
backend_storage = magma

[compaction]
