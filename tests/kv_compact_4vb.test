[test_case]
test = perfrunner.tests.kv.CompactionTest

[showfast]
title = Full compaction time (min), 4 nodes, 4 vBucket, 800M x 512B
component = kv
category = compact

[cluster]
mem_quota = 51200
initial_nodes = 4
num_vbuckets = 4

[compaction]
db_percentage = 100

[bucket]
eviction_policy = fullEviction
replica_number = 0

[load]
items = 800000000
size = 512
workers = 20
key_fmtr = hex
doc_gen = large

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0