[test_case]
test = perfrunner.tests.kv.CompactionTest

[showfast]
title = Full compaction time (min), 4 nodes, 4 vBucket, 800M x 512B
component = kv
category = compact

[cluster]
mem_quota = 51200
initial_nodes = 4
num_vbuckets = 4

[bucket]
eviction_policy = fullEviction
replica_number = 0

[bucket_extras]
num_writer_threads = disk_io_optimized

[load]
items = 800000000
size = 512
workers = 20
key_fmtr = hex
doc_gen = large

[clients]
python_client = 3.0.8