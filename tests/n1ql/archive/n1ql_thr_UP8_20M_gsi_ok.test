[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = UP8, Lookup Update, 20M docs, 14.4KGops, 3.6KSops, GSI, not_bounded
summary = Lookup Update, 14.4KGops, 3.6KSops
larger_is_better = false

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 20000000
size = 1024
workers = 20
doc_gen = reverse_lookup

[n1ql]
indexes =
    by_email::CREATE INDEX {name} ON `{bucket}` (email) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 20000000
workers = 24
time = 1200
n1ql_op = lookupupdate
n1ql_queries = lookupupdate
n1ql_throughput = 1000000
n1ql_workers = 128

[n1ql-lookupupdate]
prepared = lookupupdate
statement = UPDATE `bucket-1` SET name = name||'_UPDATED' WHERE email = $1;
scan_consistency = not_bounded
args = ["{email}"]
