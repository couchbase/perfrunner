[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest

[showfast]
title = Q1, Key-Value Lookup, 10K queries/sec, 200M docs, s=1 c=1000
component = n1ql
category = Q1_Q3
sub_category = KV

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[collection]
config = collections/1bucket_1scope_1000collections_basic.json

[compaction]
db_percentage = 100

[load]
items = 200000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[access]
items = 200000000
workers = 0
n1ql_queries = key-value-lookup
n1ql_throughput = 10000
n1ql_workers = 200
time = 1200

[n1ql-key-value-lookup]
statement = SELECT * FROM `bucket-1` USE KEYS[$1];
args = ["{key}"]

[clients]
libcouchbase = 3.0.2
python_client = 3.0.4
