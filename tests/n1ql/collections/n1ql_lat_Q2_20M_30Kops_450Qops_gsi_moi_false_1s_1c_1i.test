[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest

[showfast]
title = Q2, Singleton Unique Lookup, 450 queries/sec, MOI, request_plus, s=1 c=1 i=1
component = n1ql
category = Q1_Q3
sub_category = MOI

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
fields = email
indexes_per_collection = 1

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_throughput = 450
n1ql_workers = 100

[n1ql-singleton-unique-lookup]
statement = SELECT * FROM `bucket-1` WHERE email = $1;
scan_consistency = request_plus
args = ["{email}"]

[clients]
libcouchbase = 3.0.2
python_client = git+http://review.couchbase.org/couchbase-python-client@refs/changes/91/135991/3
