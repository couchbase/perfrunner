[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = CI6, Group By Query (1K matches), MOI, not_bounded, s=1 c=1 i=1
component = n1ql
category = Q5_Q7

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_range_lookup
range_distance = 10

[index]
fields = capped_small,year,coins
indexes_per_collection = 1
top_down = True

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = aggregation-query
n1ql_workers = 480

[n1ql-aggregation-query]
statement = SELECT year, SUM(coins) AS coins FROM `bucket-1` WHERE capped_small > $1 AND capped_small < $2 GROUP BY year;
scan_consistency = not_bounded
args = ["{capped_small}","{capped_small_range}"]

[clients]
libcouchbase = 3.0.2
python_client = 3.0.4
