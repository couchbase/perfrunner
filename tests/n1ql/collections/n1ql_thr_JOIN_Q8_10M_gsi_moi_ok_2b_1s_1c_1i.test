[test_case]
test = perfrunner.tests.n1ql.N1QLJoinThroughputTest

[showfast]
title = Q8, Inner Lookup Join, MOI, not_bounded, b=2 s=1 c=1 i=1
component = n1ql
category = join_unnest

[cluster]
mem_quota = 51200
index_mem_quota = 200000
initial_nodes = 6
num_buckets = 2

[compaction]
db_percentage = 100

[collection]
config = collections/2buckets_1scope_1collection_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 10000000
size = 1024
workers = 80
doc_gen = ext_reverse_lookup,join

[index]
fields = email
indexes_per_collection = 1

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 15000
items = 10000000
workers = 20
time = 1200
n1ql_gen = ext_reverse_lookup
n1ql_queries = lookup-join
n1ql_workers = 180

[n1ql-lookup-join]
statement = SELECT u.name, t.title FROM `bucket-1` u JOIN `bucket-2` t ON META(t).id IN u.topics WHERE u.email = $1;
scan_consistency = not_bounded
args = ["{email}"]

[clients]
libcouchbase = 3.0.2
python_client = git+http://review.couchbase.org/couchbase-python-client@refs/changes/91/135991/3
