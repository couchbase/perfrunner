[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q13, Workload E, MOI, not_bounded, s=1 c=1 i=1
component = n1ql
category = pagination
sub_category = MOI

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
fields = primary
indexes_per_collection = 1

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = range-scan
n1ql_workers = 180

[n1ql-range-scan]
statement = SELECT RAW meta().id FROM `bucket-1` WHERE meta().id >= $1 ORDER BY meta().id LIMIT 50;
scan_consistency = not_bounded
args = ["{key}"]

[clients]
libcouchbase = 3.0.2
python_client = 3.0.4