[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q15, Sub-document Search, MOI, not_bounded, s=1 c=1 i=1
component = n1ql
category = tokens

[cluster]
mem_quota = 20480
index_mem_quota = 409600
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = profile

[index]
fields = DISTINCT ARRAY s FOR s IN TOKENS(address) END
indexes_per_collection = 1

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 10000
items = 20000000
workers = 20
time = 1200
n1ql_queries = token
n1ql_workers = 120
workload_instances = 3

[n1ql-token]
statement = SELECT COUNT(1) FROM `bucket-1` WHERE ANY s IN TOKENS(address) SATISFIES s = $1 END;
scan_consistency = not_bounded
args = ["{capped_large}"]
