[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q17, Range Scan with Limit, MOI, not_bounded, s=1 c=10 i=1000
component = n1ql
category = pagination
sub_category = MOI

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_10collections_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
fields = capped_small,name,email,year,street
indexes_per_collection = 100

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 15000
items = 20000000
workers = 20
time = 1200
n1ql_queries = page-query
n1ql_workers = 120
workload_instances = 2

[n1ql-page-query]
statement = SELECT name, email FROM `bucket-1` WHERE capped_small > $1 ORDER BY capped_small LIMIT 10;
scan_consistency = not_bounded
args = ["{capped_small}"]
