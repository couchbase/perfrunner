[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q1, Key-Value Lookup, default collection
component = n1ql
category = Q1_Q3
sub_category = KV

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_default.json

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[access]
items = 20000000
workers = 0
n1ql_queries = key-value-lookup
n1ql_workers = 120
workload_instances = 2
time = 1200

[n1ql-key-value-lookup]
statement = SELECT * FROM `bucket-1` USE KEYS[$1];
args = ["{key}"]
