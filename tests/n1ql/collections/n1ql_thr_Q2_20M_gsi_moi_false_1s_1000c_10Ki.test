[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q2, Singleton Unique Lookup, MOI, request_plus, s=1 c=1000 i=10000
component = n1ql
category = Q1_Q3
sub_category = MOI

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_1000collections_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
fields = email,city,state
indexes_per_collection = 10

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_workers = 120
workload_instances = 2

[n1ql-singleton-unique-lookup]
statement = SELECT * FROM `bucket-1` WHERE email = $1;
scan_consistency = request_plus
args = ["{email}"]
