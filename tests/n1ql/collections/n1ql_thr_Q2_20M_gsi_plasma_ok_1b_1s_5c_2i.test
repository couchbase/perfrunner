[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q2, Singleton Unique Lookup, Plasma, not_bounded, b=1 s=1 c=5 i=2
component = n1ql
category = Q1_Q3
sub_category = Plasma

[cluster]
mem_quota = 20480
index_mem_quota = 13824
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_1scope_5collections_basic.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup_key_size
item_size = 80

[index]
fields = email,email
indexes_per_collection = 2

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 0
items = 20000000
workers = 0
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_workers = 120
workload_instances = 2
item_size = 80

[n1ql-singleton-unique-lookup]
statement = SELECT * FROM `TARGET_BUCKET` WHERE email = $1;
scan_consistency = not_bounded
args = ["{email}"]
