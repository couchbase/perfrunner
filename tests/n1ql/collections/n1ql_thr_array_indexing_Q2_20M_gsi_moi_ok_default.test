[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q2 Array Indexing, Singleton Unique Lookup, MOI, not_bounded, default collection
component = n1ql
category = array

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[collection]
config = collections/1bucket_default.json

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = array_indexing

[index]
fields = DISTINCT ARRAY i FOR i IN achievements1 END
indexes_per_collection = 1

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 15000
items = 20000000
workers = 20
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_workers = 120
workload_instances = 3

[n1ql-singleton-unique-lookup]
statement = SELECT * FROM `bucket-1` WHERE ANY i IN achievements1 SATISFIES i = $1 END;
scan_consistency = not_bounded
args = [{achievements1[0]}]
