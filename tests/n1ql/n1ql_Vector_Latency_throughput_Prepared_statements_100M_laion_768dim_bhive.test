[test_case]
test = perfrunner.tests.n1ql.N1qlVectorLatencyThroughputPreparedStatementTest

[showfast]
title = Vector Search, 1 bucket, LAION 100M doc 768 dims, no replica, 1s 1c
component = n1ql
category = vector
sub_category = bhive

[cluster]
mem_quota = 100000
index_mem_quota = 100000
online_cores = 16
kernel_mem_limit = 128G
kernel_mem_limit_services = kv,index
initial_nodes = 4
num_buckets = 1

[bucket]
replica_number = 0
backend_storage = magma

[collection]
config = collections/1bucket_1scope_1collection_basic_default.json

[load]
items = 100000000
size = 1024
workers = 80
doc_gen = vector_embedding

[access]
items = 100000000
workers = 0
time = 500
n1ql_op = read
doc_gen = vector_embedding
latency_percentiles = 80,95
n1ql_queries = q01
n1ql_query_type = Vector
n1ql_workers = 32
workload_instances = 1

[restore]
backup_storage = s3://laion-dataset-100m-768-dims
backup_repo = laion-dataset-100m-768-dims
threads = 50

[backup]
obj_staging_dir = /stage
obj_region = us-east-1
aws_credential_path = /root/.ssh

[index]
vector_query_path = tests/fts/data/vector/testData/Laion_query_100M_768dim.txt
ground_truth_file_name = Laion_100M/gtiIdx100M_laion.txt
ground_truth_s3_path = s3://atlas-fts-backup/VectorGroundTruthFiles/
top_k_results = 10

[secondary]
indexer.settings.storage_mode = plasma
vector_scan_probes = 25
indexes = tests/gsi/index_defs/1bucket_1scope_1collections_1_vector_index_default.json
vector_dimension = 768
override_index_def = emb Vector
vector_def_prefix = emb
vector_index_type = bhive

[n1ql-q01]
statement = SELECT META().id FROM `bucket-1` ORDER BY ANN_DISTANCE(emb, $1, 'SIMILARITY', NPROBES, RERANKING) limit top_k_results
args = [{emb}]
total_batches = 1000

[profiling]
services = index
profiles = cpu,heap
interval = 100
num_profiles = 3
