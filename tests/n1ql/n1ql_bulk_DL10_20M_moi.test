[test_case]
test = perfrunner.tests.n1ql.N1QLBulkTest

[showfast]
title = Avg. Throughput (docs/sec), DL10, Bulk Delete, MOI, 5M documents
component = n1ql
category = iud

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
statements =
    CREATE INDEX by_year ON `bucket-1`(year);

[access]
n1ql_queries = bulk-delete

[n1ql-bulk-delete]
statement = DELETE FROM `bucket-1` WHERE `year` > 1996;
