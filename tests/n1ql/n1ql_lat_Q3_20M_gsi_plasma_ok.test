[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest

[showfast]
title = Q3, range-scan, 10K queries/sec
component = n1ql
category = Q1_Q3
sub_category = Plasma

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
statements =
    CREATE INDEX by_capped_small ON `bucket-1`(capped_small);

[access]
items = 20000000
workers = 0
time = 1200
n1ql_queries = range-scan
n1ql_workers = 240
n1ql_throughput = 10000

[n1ql-range-scan]
statement = SELECT name AS _name, street AS _street FROM `bucket-1` WHERE capped_small=$1;
scan_consistency = not_bounded
args = ["{capped_small}"]
