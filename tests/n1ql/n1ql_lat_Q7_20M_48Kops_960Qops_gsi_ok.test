[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest
title = N1QL Q7 1Bux20Mx1K, Order By Query, 14.4KGops, 3.6KSops, 960Qops, GSI, stale=ok
summary = Order By Query, 14.4KGops, 3.6KSops, 960Qops
larger_is_better = false

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 20000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_capped_small::CREATE INDEX {name} ON `{bucket}` (capped_small) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 20000000
workers = 24
time = 1200
n1ql_queries = order-by-query
n1ql_throughput = 960
n1ql_workers = 96

[n1ql-order-by-query]
prepared = order_by_query
statement = SELECT name.f.f AS _name, street.f.f AS _street FROM `bucket-1` WHERE capped_small=$1 ORDER BY name.f.f.f;
scan_consistency = not_bounded
args = ["{capped_small}"]
