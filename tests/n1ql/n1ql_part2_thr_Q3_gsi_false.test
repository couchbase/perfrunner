[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = N1QL Q3 1Bux20Mx1K, Range Scan, Dual Partition, 28.8KGops, 7.2KSops, GSI, stale=false
summary = Range Scan, Dual Partition, 28.8KGops, 7.2KSops
larger_is_better = false

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 20000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 2

[n1ql]
indexes =
    by_capped_small_{partition_id}::CREATE INDEX {name} ON `{bucket}` (capped_small) WHERE partition_id == {partition_id} using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 36000
items = 20000000
workers = 24
time = 1200
n1ql_queries = range_scan
n1ql_throughput = 1000000
n1ql_workers = 720

[n1ql-range_scan]
prepared = range_scan_{partition_id}
statement = SELECT name AS _name, street AS _street FROM `bucket-1` WHERE partition_id == {partition_id} and capped_small == $1;
scan_consistency = request_plus
args = ["{capped_small}"]
