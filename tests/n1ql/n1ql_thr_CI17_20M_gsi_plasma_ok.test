[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = CI17, Range Scan with Limit, Covering, Plasma, not_bounded
component = n1ql
category = pagination
sub_category = Plasma

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
statements =
    CREATE INDEX by_capped_small ON `bucket-1`(capped_small, name, email);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 15000
items = 20000000
workers = 20
time = 1200
n1ql_queries = page-query
n1ql_workers = 120
workload_instances = 2

[n1ql-page-query]
statement = SELECT name, email FROM `bucket-1` WHERE capped_small > $1 ORDER BY capped_small LIMIT 10;
scan_consistency = not_bounded
args = ["{capped_small}"]
