[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = CI3, Range Scan, FDB, request_plus
component = n1ql
category = CI_thr

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[secondary]
indexer.settings.storage_mode = forestdb
indexer.settings.wal_size = 40960

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[n1ql]
indexes =
    by_capped_small_name_street::CREATE INDEX {name} ON `{bucket}`(capped_small, name, street);

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 20000000
workers = 20
time = 1200
n1ql_queries = range-scan
n1ql_workers = 720

[n1ql-range-scan]
prepared = range_scan
statement = SELECT name AS _name, street AS _street FROM `bucket-1` WHERE capped_small=$1;
scan_consistency = request_plus
args = ["{capped_small}"]
