[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = N1QL DL5 1Bux50Mx1K, Key-Value Delete, 14.4KGops, 3.6KSops
summary = Key-Value Delete, 14.4KGops, 3.6KSops
larger_is_better = false

[cluster]
mem_quota = 40960
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 50000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 50000000
workers = 24
time = 1200
n1ql_op = delete
n1ql_queries = key-value-delete
n1ql_throughput = 1000000
n1ql_workers = 240

[n1ql-key-value-delete]
prepared = key_value_delete
statement = DELETE FROM `bucket-1` USE KEYS [$1];
args = ["{key}"]
