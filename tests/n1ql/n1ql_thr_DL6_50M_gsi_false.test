[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = N1QL DL6 1Bux50Mx1K, Range Scan, 14.4KGops, 3.6KSops, GSI, stale=false
summary = Range Scan, 14.4KGops, 3.6KSops
larger_is_better = false

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 50000000
size = 1024
workers = 20
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_capped_small::CREATE INDEX {name} ON `{bucket}` (capped_small) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 50000000
workers = 24
time = 1200
n1ql_op = rangedelete
n1ql_queries = deleterange
n1ql_throughput = 1000000
n1ql_workers = 720

[n1ql-deleterange]
prepared = deleterange
statement = DELETE FROM `bucket-1` WHERE capped_small=$1;
scan_consistency = request_plus
args = ["{capped_small}"]
