[test_case]
test = perfrunner.tests.n1ql.N1QLJoinThroughputTest

[showfast]
title = Q25, Left Outer Index Join, MOI, not_bounded
component = n1ql
category = join_unnest

[cluster]
mem_quota = 51200
index_mem_quota = 200000
initial_nodes = 6
num_buckets = 2

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 10000000
size = 1024
workers = 80
doc_gen = ext_reverse_lookup,join

[index]
statements =
    CREATE INDEX by_email ON `bucket-1`(email);
    CREATE INDEX by_owner ON `bucket-2`(owner);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 15000
items = 10000000
workers = 20
time = 1200
n1ql_gen = ext_reverse_lookup
n1ql_queries = index-join
n1ql_workers = 240
doc_gen = ext_reverse_lookup,join

[n1ql-index-join]
statement = SELECT u.name, t.title FROM `bucket-1` u LEFT OUTER JOIN `bucket-2` t ON u.name = t.owner WHERE u.email = $1;
scan_consistency = not_bounded
args = ["{email}"]

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0