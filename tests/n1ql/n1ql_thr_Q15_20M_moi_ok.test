[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q15, Sub-document Search, MOI, not_bounded
component = n1ql
category = tokens

[cluster]
mem_quota = 20480
index_mem_quota = 409600
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = profile

[index]
statements =
    CREATE INDEX tokens_idx ON `bucket-1`(DISTINCT ARRAY s FOR s IN TOKENS(address) END);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = token
n1ql_workers = 240
workload_instances = 2

[n1ql-token]
statement = SELECT COUNT(1) FROM `bucket-1` WHERE ANY s IN TOKENS(address) SATISFIES s = $1 END;
scan_consistency = not_bounded
args = ["{capped_large}"]

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0