[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q19, Composite Filters (1000 -> 1), MOI, request_plus
component = n1ql
category = API2
sub_category = MOI

[cluster]
mem_quota = 40960
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_range_lookup
range_distance = 4

[index]
statements =
    CREATE INDEX by_capped_small ON `bucket-1`(capped_small, email);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = composite
n1ql_throughput = 1000000
n1ql_workers = 512

[n1ql-composite]
statement = SELECT name FROM `bucket-1` WHERE capped_small BETWEEN $1 AND $2 AND email = $3;
args = ["{capped_small}","{capped_small_range}","{email}"]
scan_consistency = request_plus

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0