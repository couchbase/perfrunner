[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputRebalanceTest

[showfast]
title = Q1, Key-Value Lookup with rebalance-swap
component = n1ql
category = Q1_Q3
sub_category = KV

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[access]
items = 20000000
workers = 0
n1ql_queries = key-value-lookup
n1ql_workers = 480
workload_instances = 3
time = 1200

[rebalance]
start_after = 30
stop_after = 30

[n1ql-key-value-lookup]
statement = SELECT * FROM `bucket-1` USE KEYS[$1];
args = ["{key}"]

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0