[test_case]
test = perfrunner.tests.n1ql.N1QLXattrThroughputRebalanceTest

[showfast]
title = Q1, XATTR Lookup with rebalance-swap
component = n1ql
category = Q1_Q3
sub_category = KV

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[xattr_load]
items = 10000000
size = 1024
workers = 80
xattr_field = user

[access]
items = 20000000
workers = 0
n1ql_queries = key-value-lookup
n1ql_workers = 480
workload_instances = 2
time = 1200

[n1ql-key-value-lookup]
statement = SELECT META().xattrs.`user` FROM `bucket-1` USE KEYS[$1];
args = ["{key}"]
