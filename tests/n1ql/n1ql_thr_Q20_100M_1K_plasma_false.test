[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q20, Count (1K matches), 100M docs, Plasma, request_plus
component = n1ql
category = count
sub_category = Plasma

[cluster]
mem_quota = 51200
index_mem_quota = 300000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 100000000
size = 1024
workers = 80
doc_gen = reverse_range_lookup
range_distance = 10

[index]
statements =
    CREATE INDEX by_capped_small ON `bucket-1`(capped_small);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 10000
items = 100000000
workers = 20
time = 1200
n1ql_queries = aggregation-query
n1ql_workers = 240
workload_instances = 3

[n1ql-aggregation-query]
statement = SELECT COUNT(*) FROM `bucket-1` WHERE capped_small > $1 AND capped_small < $2;
args = ["{capped_small}","{capped_small_range}"]
scan_consistency = request_plus
