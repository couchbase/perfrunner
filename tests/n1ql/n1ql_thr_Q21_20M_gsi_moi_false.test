[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q21, COUNT DISTINCT, MOI, request_plus
component = n1ql
category = API2
sub_category = MOI

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
statements =
    CREATE INDEX idx ON `bucket-1`(capped_small, year);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 15000
items = 20000000
workers = 20
time = 1200
n1ql_queries = count-distinct
n1ql_workers = 240
workload_instances = 3

[n1ql-count-distinct]
statement = SELECT COUNT(DISTINCT year) FROM `bucket-1` WHERE capped_small = $1;
scan_consistency = request_plus
args = ["{capped_small}"]

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0