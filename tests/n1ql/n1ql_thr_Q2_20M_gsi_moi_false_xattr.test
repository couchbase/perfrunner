[test_case]
test = perfrunner.tests.n1ql.N1QLXattrThroughputTest

[showfast]
title = Q2 XATTR, Singleton Unique Lookup, MOI, request_plus
component = n1ql
category = Q1_Q3
sub_category = MOI

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[xattr_load]
items = 10000000
size = 1024
workers = 80
xattr_field = user

[index]
statements =
    CREATE INDEX by_email ON `bucket-1`(META().xattrs.`user`.email);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 10000
items = 20000000
workers = 20
xattr_field = user
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_workers = 120
workload_instances = 3

[n1ql-singleton-unique-lookup]
statement = SELECT META().xattrs.`user` FROM `bucket-1` WHERE META().xattrs.`user`.email = $1;
scan_consistency = request_plus
args = ["{email}"]
