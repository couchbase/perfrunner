[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = Q7, Order By Query, FDB, request_plus
component = n1ql
category = Q5_Q7_thr

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[secondary]
indexer.settings.storage_mode = forestdb
indexer.settings.wal_size = 40960

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[n1ql]
indexes =
    by_capped_small::CREATE INDEX {name} ON `{bucket}`(capped_small);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 3600
items = 20000000
workers = 4
time = 1200
n1ql_queries = order-by-query
n1ql_workers = 720

[n1ql-order-by-query]
statement = SELECT name AS _name, street AS _street FROM `bucket-1` WHERE capped_small=$1 ORDER BY name;
scan_consistency = request_plus
args = ["{capped_small}"]
