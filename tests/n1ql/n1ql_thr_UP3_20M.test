[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = UP3, Key-Value Update
component = n1ql
category = iud

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[access]
items = 20000000
workers = 0
time = 1200
n1ql_op = update
n1ql_queries = key-value-update
n1ql_workers = 240
workload_instances = 3

[n1ql-key-value-update]
statement = UPDATE `bucket-1` USE KEYS [$1] SET name = name||'_UPDATED';
args = ["{key}"]

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0