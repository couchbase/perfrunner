[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = UP4, Range Scan, MOI, request_plus
component = n1ql
category = iud

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
statements =
    CREATE INDEX by_capped_small ON `bucket-1`(capped_small);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 10000
items = 20000000
workers = 20
time = 1200
n1ql_op = update
n1ql_queries = updaterange
n1ql_workers = 360
workload_instances = 3

[n1ql-updaterange]
statement = UPDATE `bucket-1` SET name = name||'_UPDATED' WHERE capped_small=$1;
scan_consistency = request_plus
args = ["{capped_small}"]
