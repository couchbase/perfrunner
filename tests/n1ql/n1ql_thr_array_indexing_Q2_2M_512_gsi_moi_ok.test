[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q2 Array Indexing, Singleton Unique Lookup, MOI, not_bounded
component = n1ql
category = array

[cluster]
mem_quota = 40960
index_mem_quota = 400000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 2000000
size = 0
workers = 80
doc_gen = array_indexing
doc_partitions = 1
array_size = 512

[index]
statements =
    CREATE INDEX by_achievements1 ON `bucket-1`(DISTINCT ARRAY i FOR i IN achievements1 END);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 5000
items = 2000000
workers = 10
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_workers = 120
workload_instances = 2

[n1ql-singleton-unique-lookup]
statement = SELECT * FROM `bucket-1` WHERE ANY i IN achievements1 SATISFIES i = $1 END;
scan_consistency = not_bounded
args = [{achievements1[0]}]

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0