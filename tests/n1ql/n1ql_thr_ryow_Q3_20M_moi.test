[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = N1QL Q3 RYOW 1Bux20Mx1K, Range Scan, 30KSops, MOI
summary = Singleton Unique Lookup, 30KSops
larger_is_better = true

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[load]
items = 20000000
size = 1024
workers = 40
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_capped_small::CREATE INDEX {name} ON `{bucket}` (capped_small);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 600
n1ql_queries = range-scan
n1ql_op = ryow
n1ql_throughput = 1000000
n1ql_workers = 1200

[n1ql-range-scan]
prepared = range_scan
statement = "SELECT name AS _name, street AS _street FROM `bucket-1` WHERE capped_small="{}"";
args = ["{capped_small}"]
time_sleep = 0.01
