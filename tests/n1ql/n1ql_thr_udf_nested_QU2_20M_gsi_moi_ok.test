[test_case]
test = perfrunner.tests.n1ql.N1QLFunctionThroughputTest

[showfast]
title = QU2, Function calling another function, Singleton Unique Lookup, MOI, not_bounded
component = n1ql
category = UDF
sub_category = MOI

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
statements =
    CREATE INDEX by_email ON `bucket-1`(email);

[n1ql_function]
statements =
    CREATE FUNCTION func1(vEmail) { (SELECT * FROM `bucket-1` WHERE email = vEmail) };
    CREATE FUNCTION func2(vEmail) { (func1(vEmail)) };

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = singleton-unique-lookup
n1ql_workers = 120
workload_instances = 2

[n1ql-singleton-unique-lookup]
statement = execute function func2($1);
scan_consistency = not_bounded
args = ["{email}"]

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0