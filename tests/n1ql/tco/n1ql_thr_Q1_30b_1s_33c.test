[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q1, Key-Value Lookup, b30, s=1 c=33
component = n1ql
category = Q1_Q3
sub_category = KV

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 2

[compaction]
db_percentage = 100

[collection]
config = collections/30buckets_1scope_33collections_basic.json

[load]
items = 2000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[access]
items = 2000000
workers = 0
n1ql_queries = q01, q02
n1ql_workers = 240
workload_instances = 2
time = 1200

[n1ql-q01]
statement = SELECT * FROM `bucket-1` USE KEYS[$1];
args = ["{key}"]

[n1ql-q02]
statement = SELECT * FROM `bucket-2` USE KEYS[$1];
args = ["{key}"]
