[n1ql]
indexes =
    by_email::CREATE INDEX {name} ON `{bucket}` (email.f.f) using gsi;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 48000
items = 20000000
size = 1024
workers = 24
time = 1200
doc_gen = new
n1ql_queries = n1ql-singleton-unique-lookup
