[test_case]
test = perfrunner.tests.ycsb.YCSBN1QLThroughputTest

[showfast]
title = Avg Throughput (queries/sec), Workload E, MOI, 4 nodes
component = cloud
category = ycsb

[cluster]
mem_quota = 40960
index_mem_quota = 10240
initial_nodes = 4
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
workload_path = workloads/workloade
ycsb_client = couchbase3
items = 20000000
workers = 40

[index]
statements =
    CREATE PRIMARY INDEX primary_idx ON `bucket-1` WITH {"num_replica": 3};

[access]
workload_path = workloads/workloade
ycsb_client = couchbase3
items = 20000000
ops = 0
time = 1200
workers = 600
workload_instances = 6
kv_endpoints = 1024

[ycsb]
branch = couchbase3

[stats]
client_processes = java