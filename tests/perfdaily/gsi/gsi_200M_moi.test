[test_case]
test = perfdaily.gsi.InitialIndexTest

[showfast]
title = 200M docs, 1 index, MOI
component = GSI
threshold = 10

[stats]
interval = 1
server_processes = projector

[cluster]
mem_quota = 51200
index_mem_quota = 204800
initial_nodes = 6
num_buckets = 1
ipv6 = 1

[secondary]
indexer.settings.storage_mode = memory_optimized

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[load]
items = 200000000
size = 1024
workers = 100

[index]
statements =
    CREATE INDEX by_email ON `bucket-1`(email);

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0