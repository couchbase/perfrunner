component = KV
threshold = 15

[cluster]
mem_quota = 51200
initial_nodes = 3
num_buckets = 1
ipv6 = 1

[bucket]
failover_min = 60

[load]
items = 100000000
size = 1024
workers = 80

[hot_load]
