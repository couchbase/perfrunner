[test_case]
test = perfdaily.n1ql.N1QLThroughputTest

[showfast]
title = Q1, Key-Value Lookup, 5M docs
component = N1QL

[stats]
interval = 1

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1
ipv6 = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[load]
items = 5000000
size = 1024
workers = 40
doc_gen = reverse_lookup

[access]
items = 5000000
workers = 0
workload_instances = 2
n1ql_queries = key-value-lookup
n1ql_workers = 480
time = 600

[n1ql-key-value-lookup]
statement = SELECT * FROM `bucket-1` USE KEYS[$1];
args = ["{key}"]
