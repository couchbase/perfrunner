[test_case]
test = perfdaily.n1ql.N1QLThroughputTest

[showfast]
title = Q2, Singleton Unique Lookup, 5M docs, Plasma, not_bounded
component = N1QL

[stats]
interval = 1

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1
ipv6 = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 5000000
size = 1024
workers = 40
doc_gen = reverse_lookup

[index]
statements =
    CREATE INDEX by_email ON `bucket-1`(email);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 5000000
workers = 20
time = 600
n1ql_queries = singleton-unique-lookup
n1ql_workers = 240

[n1ql-singleton-unique-lookup]
statement = SELECT * FROM `bucket-1` WHERE email = $1;
scan_consistency = not_bounded
args = ["{email}"]
