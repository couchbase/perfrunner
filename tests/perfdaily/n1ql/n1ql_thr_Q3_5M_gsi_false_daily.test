[test_case]
test = perfdaily.master.n1ql.N1QLThroughputTestDaily
title = Q3, Range Scan, 5M docs, 14.4KGops, 3.6KSops, GSI, stale=false
summary = Range Scan, 14.4KGops, 3.6KSops
larger_is_better = true

[cluster]
mem_quota = 20480
index_mem_quota = 10000
initial_nodes = 6
num_buckets = 1

[load]
items = 5000000
size = 1024
workers = 40
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_capped_small::CREATE INDEX {name} ON `{bucket}` (capped_small) using gsi;

[secondary]
indexer.settings.storage_mode = forestdb

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 5000000
workers = 20
time = 600
n1ql_queries = range-scan
n1ql_throughput = 1000000
n1ql_workers = 720

[n1ql-range-scan]
prepared = range_scan
statement = SELECT name AS _name, street AS _street FROM `bucket-1` WHERE capped_small=$1;
scan_consistency = request_plus
args = ["{capped_small}"]

[dailyp]
dailyp_category = n1ql
dailyp_subcategory = FDB
threshold = 20