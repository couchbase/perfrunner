[test_case]
test = perfrunner.tests.rebalance.OnlineMigrationWithRebalanceTest

[showfast]
title = Online Migration (min), Couchstore -> Magma, 4 Nodes, 1B x 1KB, 15K ops/sec (90/10 R/W), 10%% cache miss rate, s=1, c=1000
component = reb
category = migration
orderby = 000002

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 65G
kernel_mem_limit_services = kv

[bucket]
eviction_policy = fullEviction
backend_storage = couchstore
failover_min = 120

[collection]
config = collections/1bucket_1scope_1000collections_basic.json

[load]
items = 1000000000
size = 1024
workers = 128
key_fmtr = hex
doc_gen = large

[hot_load]
items = 1000000000
workers = 128
working_set = 5

[access]
creates = 0
reads = 90
updates = 10
deletes = 0
throughput = 15000
items = 1000000000
workers = 128
working_set = 5
working_set_access = 90

[rebalance]
nodes_after = 4
start_after = 300
stop_after = 300
swap = 1
