[test_case]
test = perfrunner.tests.rebalance.OnlineMigrationWithRebalanceTest

[showfast]
title = Online Migration (min), Couchstore -> Magma, 4 Nodes, 4B x 1KB, 15K ops/sec (90/10 R/W), 10%% cache miss rate
component = reb
category = migration
orderby = 000001

[cluster]
mem_quota = 204800
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 248G
kernel_mem_limit_services = kv

[bucket]
eviction_policy = fullEviction
backend_storage = couchstore
failover_min = 120

[load]
items = 4000000000
size = 1024
workers = 80
key_fmtr = hex
doc_gen = large
workload_instances = 2

[hot_load]
items = 4000000000
workers = 80
working_set = 5

[access]
creates = 0
reads = 90
updates = 10
deletes = 0
throughput = 15000
items = 4000000000
workers = 40
working_set = 5
working_set_access = 90

[rebalance]
nodes_after = 4
start_after = 300
stop_after = 300
swap = 1
