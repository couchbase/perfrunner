[test_case]
test = perfrunner.tests.kv.MixedLatencyTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 20M x 1KB, 10K ops/sec, s=1000 c=1000, TLS
component = kv
category = latency_ssl

[cluster]
mem_quota = 40960
initial_nodes = 4
num_buckets = 1

[collection]
config = collections/1bucket_1000scopes_1000collections_basic.json

[load]
items = 20000000
size = 1024
workers = 100
doc_gen = large

[access]
creates = 1
reads = 50
updates = 48
deletes = 1
throughput = 10000
items = 20000000
workers = 24
time = 1200
ssl_mode = data
show_tls_version = true
min_tls_version = tlsv1.3

[clients]
libcouchbase = 3.0.7
python_client = 3.0.8