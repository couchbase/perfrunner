[test_case]
test = perfrunner.tests.kv.MixedLatencyTest

[showfast]
title = latency (ms), 4 nodes, 1 bucket x 20M x 1KB, 10K ops/sec, Ephemeral, TLS
component = kv
category = latency_ssl

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1

[bucket]
bucket_type = ephemeral
eviction_policy = nruEviction

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = large

[access]
creates = 1
reads = 50
updates = 48
deletes = 1
throughput = 10000
items = 20000000
workers = 12
time = 1200
ssl_mode = data
show_tls_version = true
min_tls_version = tlsv1.3

[clients]
libcouchbase = 2.9.3
python_client = 2.5.0