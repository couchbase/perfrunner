[test_case]
test = perfrunner.tests.kv.PillowFightTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 2 nodes, 50/50 R/W, 512B JSON items, 1K batch size, Ephemeral, 10 vCPU, s=1 c=1, TLS
component = kv
category = max_ops_ssl
orderby = mixed3

[cluster]
mem_quota = 51200
initial_nodes = 2
num_buckets = 1
online_cores = 5

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[bucket]
bucket_type = ephemeral
eviction_policy = nruEviction

[load]
size = 512
items = 20000000
workers = 50
doc_gen = json

[access]
items = 20000000
iterations = 40000
workers = 50
updates = 50
ssl_mode = data
show_tls_version = true
min_tls_version = tlsv1.3

[clients]
libcouchbase = 3.3.12