[test_case]
test = perfrunner.tests.kv.PillowFightTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 2 nodes, 80/20 R/W, 512B JSON items, 1K batch size, 10 vCPU, TLS
component = kv
category = max_ops_ssl
orderby = reads2

[cluster]
mem_quota = 51200
initial_nodes = 2
num_buckets = 1
online_cores = 5

[load]
size = 512
items = 20000000
workers = 50
doc_gen = json

[access]
items = 20000000
iterations = 40000
workers = 50
updates = 20
ssl_mode = data
show_tls_version = true
min_tls_version = tlsv1.3

[clients]
libcouchbase = 3.3.12