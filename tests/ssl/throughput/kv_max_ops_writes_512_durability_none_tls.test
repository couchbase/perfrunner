[test_case]
test = perfrunner.tests.kv.PillowFightDurabilityTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 4 nodes, 0/100 R/W, 512B JSON items, batch size = 1, Durability None, TLS
component = kv
category = max_ops_ssl
orderby = za1

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1

[bucket]
replica_number = 2

[load]
size = 512
items = 20000000
workers = 128
doc_gen = json
durability = 0

[access]
batch_size = 1
items = 20000000
iterations = 1000000
workers = 128
updates = 100
durability = 0
ssl_mode = data
show_tls_version = true

[clients]
libcouchbase = 3.0.7