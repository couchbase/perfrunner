[test_case]
test = perfrunner.tests.kv.PillowFightDurabilityTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 4 nodes, 0/100 R/W, 512B JSON items, batch size = 1, Persist Majority, TLS
component = kv
category = max_ops_ssl
orderby = zd1

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1

[bucket]
replica_number = 2

[load]
size = 512
items = 20000000
workers = 128
doc_gen = json
durability = 0

[access]
batch_size = 1
items = 20000000
iterations = 100000
workers = 128
updates = 100
durability = 3
ssl_mode = data
show_tls_version = true
min_tls_version = tlsv1.3

[clients]
libcouchbase = 3.3.12