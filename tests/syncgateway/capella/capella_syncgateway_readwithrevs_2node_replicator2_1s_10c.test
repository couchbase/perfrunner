[test_case]
test = perfrunner.tests.syncgateway.SGRead

[showfast]
title = +rev, 2 nodes, cache hit 0.5%%, replicator2, basicAuth, s=1 c=10
component = syncgatewaycloud
category = read
sub_category = {provider}
orderby = b21

[cluster]
initial_nodes = 3
num_buckets = 1
enable_cpu_cores = false
enable_n2n_encryption = all

[collection]
config = collections/1bucket_1scope_10collections_basic.json

[access]
time = 600
workers = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[syncgateway]
nodes = 2
threads = 200
clients = 4
instances_per_client = 5
workload_path = workloads/syncgateway_coll
ycsb_repo = git://github.com/couchbaselabs/YCSB.git
ycsb_branch = tmp-sqw-weekly-updated-c3
ycsb_command = syncgateway3
users = 1000
channels = 1
channels_per_user = 1
channels_per_doc = 1
documents = 1000000
roundtrip_write = false
read_mode = documents_with_revs
feed_reading_mode = idsonly
feed_mode = normal
insert_mode = bykey
auth = true
instance = Standard_F8s_v2
readproportion=1
updateproportion=0
insertproportion=0
requestdistribution = zipfian
log_title = sync_gateway_1node_reads
replicator2 = true
basic_auth = true