[test_case]
test = perfrunner.tests.syncgateway.SGRead

[showfast]
title = , 1 node, cache hit 100%%, replicator2, basicAuth, s=1 c=1
component = cloud
category = elixir
sub_category = Mobile
orderby = a43

[cluster]
mem_quota = 5120
initial_nodes = 3
num_buckets = 1
enable_cpu_cores = false
serverless_mode = enabled
serverless_throttle = 100000

[bucket]
eviction_policy = fullEviction
backend_storage = magma
replica_number = 2

[collection]
config = collections/1bucket_1scope_1collection_basic.json

[internal]
magmaMinMemoryQuota = 256

[access]
time = 300
workers = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[syncgateway]
nodes = 1
threads = 800
clients = 4
instances_per_client = 5
workload_path = workloads/syncgateway_blank
ycsb_repo = git://github.com/couchbaselabs/YCSB.git
ycsb_branch = syncgateway-weekly
users = 1000
channels = 1
channels_per_user = 1
channels_per_doc = 1
documents = 1000000
documents_workset = 5000
roundtrip_write = true
read_mode = documents
feed_reading_mode = idsonly
feed_mode = normal
insert_mode = bykey
auth = true
readproportion=1
updateproportion=0
insertproportion=0
requestdistribution = zipfian
log_title = sync_gateway_1node_reads
replicator2 = true
basic_auth = true
