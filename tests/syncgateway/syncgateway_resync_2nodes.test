[test_case]
test = perfrunner.tests.syncgateway.ResyncTest

[showfast]
title = Resync time (min), 20M docs
component = syncgateway
category = resync
orderby = 000001

[cluster]
mem_quota = 40960
index_mem_quota = 40960
initial_nodes = 6
num_buckets = 1


[access]
time = 600
workers = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[syncgateway]
nodes = 2
threads = 600
clients = 4
instances_per_client = 5
ycsb_command = syncgateway
workload_path = workloads/syncgateway_blank
ycsb_repo = git://github.com/couchbaselabs/YCSB.git
ycsb_branch = tmp-sqw-weekly-updated-c3
users = 1000
channels = 100
channels_per_user = 10
channels_per_doc = 2
documents = 20000000
roundtrip_write = true
feed_mode = longpoll
feed_reading_mode = idsonly
insert_mode = byuser
auth = true
readproportion=0
updateproportion=0
insertproportion=1
requestdistribution = zipfian
log_title = sync_gateway_resync
replicator2 = true
basic_auth = true
roundtrip_write_load = true