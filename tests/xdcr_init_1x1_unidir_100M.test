[test_case]
test = perfrunner.tests.xdcr.XdcrInitTest
title = Avg. initial XDCR rate (items/sec), 1 -> 1 UniDir, 1 bucket x 100M x 1KB, non-DGM, no compaction
summary = Initial XDCR test, 1 -> 1 nodes, 1 bucket x 100M x 1KB, no compaction, UniDir
larger_is_better = true

[cluster]
mem_quota = 204800
initial_nodes = 1 1
num_buckets = 1

[bucket]
replica_number = 0

[xdcr_cluster]
optimisticReplicationThreshold = 0

[compaction]
db_percentage = 100
view_percentage = 100

[load]
ops = 100000000
size = 800
workers = 40
async = 1

[xdcr]
replication_type = unidir
