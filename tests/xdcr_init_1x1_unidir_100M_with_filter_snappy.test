[test_case]
test = perfrunner.tests.xdcr.UniDirXdcrInitTest

[showfast]
title = Avg. initial XDCR rate (items/sec), 1 -> 1 (2 source nozzles, 4 target nozzles), 1 bucket x 100M x 1KB, Filter (matching ~50%% of the items), Snappy
component = xdcr
category = init_single
orderby = filter

[stats]
server_processes = goxdcr

[cluster]
mem_quota = 204800
initial_nodes = 1 1
num_buckets = 1

[bucket]
replica_number = 0
compression_mode = passive

[xdcr_cluster]
sourceNozzlePerNode = 2
targetNozzlePerNode = 4
compressionType = Snappy

[load]
items = 100000000
size = 1024
workers = 80
doc_gen = large

[xdcr]
filter_expression = .*[13579]$
