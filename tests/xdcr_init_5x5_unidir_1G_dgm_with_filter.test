[test_case]
test = perfrunner.tests.xdcr.XdcrInitTest
title = Avg. initial XDCR rate (items/sec), 5 -> 5 UniDir, 1 bucket x 1G x 1KB, no compaction, with filter (matching ~50%% of the items)
summary = Initial XDCR test, 5 -> 5 nodes, 1 bucket x 1G x 1KB, DGM, no compaction, UniDir, with filter (matching ~50%% of the items)
larger_is_better = true

[cluster]
mem_quota = 204800
initial_nodes = 5 5
num_buckets = 1

[xdcr_cluster]
optimisticReplicationThreshold = 0

[compaction]
db_percentage = 100
view_percentage = 100

[load]
ops = 1000000000
size = 800
workers = 40
async = 1

[xdcr]
replication_type = unidir
filter_expression = 7
