[test_case]
test = perfrunner.tests.xdcr.XdcrInitTest
title = Avg. initial XDCR rate (items/sec), 1 -> 1 UniDir, 1 bucket x 100M x 1KB, LWW
summary = Initial XDCR LWW withDrift test, 1 -> 1 nodes, 1 bucket x 100M x 1KB, no compaction, UniDir
larger_is_better = true

[cluster]
mem_quota = 204800
initial_nodes = 1 1
num_buckets = 1

[bucket]
replica_number = 0
time_synchronization = enabledWithoutDrift

[xdcr_cluster]
sourceNozzlePerNode = 4
targetNozzlePerNode = 4

[compaction]
db_percentage = 100
view_percentage = 100

[load]
items = 100000000
size = 800
workers = 80

[xdcr]
replication_type = unidir