[test_case]
test = perfrunner.tests.magma.YCSBThroughputHIDDTest

[showfast]
title = Avg Throughput (ops/sec), Workload G, 4 nodes, 1 bucket x 100M x 6KB, Uniform distribution, Couchstore
component = hidd
category = ycsb

[cluster]
mem_quota = 102400
initial_nodes = 4
num_buckets = 1
kernel_mem_limit = 120G
kernel_mem_limit_services = kv
enable_cpu_cores = false

[bucket]
replica_number = 1
eviction_policy = fullEviction

[bucket_extras]
num_reader_threads = 64
num_writer_threads = 16

[load]
workload_path = workloads/workloadg
ycsb_client = couchbase3
items = 100000000
workers = 320
kv_endpoints = 64
field_length = 6000
field_count = 1
size = 6000

[access]
workload_path = workloads/workloadg
ycsb_client = couchbase3
items = 100000000
ops = 1000000000
time = 10800
boost = 12
workers = 320
kv_endpoints = 64
workload_instances = 6
field_length = 6000
field_count = 1
requestdistribution = uniform

[ycsb]
branch = couchbase3

[stats]
client_processes = java
